function INSTALL
{

apt-get install --assume-yes --force-yes phpldapadmin

mv /etc/phpldapadmin $LAMPP_DIRECTORY/etc
ln -s $LAMPP_DIRECTORY/etc/phpldapadmin /etc/phpldapadmin



}


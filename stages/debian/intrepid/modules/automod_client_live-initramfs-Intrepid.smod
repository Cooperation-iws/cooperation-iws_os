sed -i '189s/^/#/' /usr/share/initramfs-tools/scripts/live
sed -i '31s/^/mkdir \/usr\/share ; cp -r \/usr\/share\/keymaps \/usr\/share\/./' /usr/share/initramfs-tools/hooks/keymap

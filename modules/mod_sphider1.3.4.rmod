function CREATE_INSTALL_SCRIPT
{

echo "

#Sphider
sed -i \"122s/''/'localhost'/\" $WWW_DIRECTORY/$NOM_SPHIDER/platform/conf/claro_main.conf.php
" >> $LAMPP_DIRECTORY/share/lampp/config_post_install.sh

}


\$cfg['cache_engine'] = 'Pluf_Cache_File';
\$cfg['cache_timeout'] = 0;
\$cfg['cache_file_folder'] = \$cfg['tmp_folder'].'/cache';

# The folder in which the templates of the application are located.
\$cfg['template_folders'] = array(

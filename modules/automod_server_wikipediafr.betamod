function INSTALL
{
MESSAGE="INSTALL_WIKIPEDIAFR"

WGET_MIRROIR_FREE

#WIKIPEDIAFR
MESSAGE="Mediawiki paramétrage"
echo -e '\E[37;44m'"\033[1m $MESSAGE \033[0m"
apt-get install --yes --force-yes imagemagick tetex-bin gs-esp cjk-latex latex-cjk-all binutils tidy ocaml

for (( count=1; count<=$NB_WIKIPEDIAFR; count++ ))

do
cd $DL_DIR
mkdir $WWW_DIRECTORY/${MOD_NAME[$count]}
cp -Rf mediawiki/* $WWW_DIRECTORY/${MOD_NAME[$count]}/.
echo "create database ${MOD_NAME[$count]};
grant all on ${MOD_NAME[$count]}.* to ${MOD_NAME[$count]}@localhost identified by '$WIKIPEDIAFR_MYSQL_PWD';
flush privileges;" > mediawiki_db.sql

$BIN_MYSQL -u root < mediawiki_db.sql mysql
rm mediawiki_db.sql

cat $WWW_DIRECTORY/${MOD_NAME[$count]}/config/index.php | sed -i -e "579s/wikiuser/${MOD_NAME[$count]}/" $WWW_DIRECTORY/${MOD_NAME[$count]}/config/index.php
cat $WWW_DIRECTORY/${MOD_NAME[$count]}/config/index.php | sed -i -e "578s/wikidb/${MOD_NAME[$count]}/" $WWW_DIRECTORY/${MOD_NAME[$count]}/config/index.php
cat $WWW_DIRECTORY/${MOD_NAME[$count]}/config/index.php | sed -i -e "580s/importPost( \"DBpassword\" )/importPost( \"DBpassword\", \"$WIKIPEDIAFR_MYSQL_PWD\" )/" $WWW_DIRECTORY/${MOD_NAME[$count]}/config/index.php
cat $WWW_DIRECTORY/${MOD_NAME[$count]}/config/index.php | sed -i -e "581s/importPost( \"DBpassword2\" )/importPost( \"DBpassword\", \"$WIKIPEDIAFR_MYSQL_PWD\" )/" $WWW_DIRECTORY/${MOD_NAME[$count]}/config/index.php
cat $WWW_DIRECTORY/${MOD_NAME[$count]}/config/index.php | sed -i -e '613s/if/#if/' $WWW_DIRECTORY/${MOD_NAME[$count]}/config/index.php
cat $WWW_DIRECTORY/${MOD_NAME[$count]}/config/index.php | sed -i -e '614s/\$errs/#\$errs/' $WWW_DIRECTORY/${MOD_NAME[$count]}/config/index.php
cat $WWW_DIRECTORY/${MOD_NAME[$count]}/config/index.php | sed -i -e '615s/}/#}/' $WWW_DIRECTORY/${MOD_NAME[$count]}/config/index.php


cd $WWW_DIRECTORY/${MOD_NAME[$count]}/math
make

chown -R www-data $WWW_DIRECTORY/${MOD_NAME[$count]}

echo "
---------COOPERATION LIVE SCRIPTS $VERSION----------

$MESS_WARNING_POST_INSTALL

----then Press enter-----
"

read r < /dev/tty
echo "
#mediawiki
mv \$WWW_DIRECTORY/${MOD_NAME[$count]}/config/LocalSettings.php \$WWW_DIRECTORY/${MOD_NAME[$count]}
sed -i \"99s/false/true/\"  \$WWW_DIRECTORY/${MOD_NAME[$count]}/LocalSettings.php

echo \"
\\\$wgUploadPath = \\\"images\\\";
\\\$wgUploadDirectory = \\\"images\\\";
\\\$wgMathPath = \\\"\\\$wgScriptPath/\\\$wgUploadDirectory/math\\\";
\\\$wgMathDirectory = \\\"\\\$wgUploadDirectory/math\\\";
\\\$wgTmpDirectory = \\\"\\\$wgUploadDirectory/tmp\\\";

\" >> \$WWW_DIRECTORY/${MOD_NAME[$count]}/LocalSettings.php


" > /var/share/lampp/configWikipedia_post_install.sh

./var/share/lampp/configWikipedia_post_install.sh

echo "TRUNCATE interwiki;
TRUNCATE page;
TRUNCATE revision;
TRUNCATE text;" > /tmp/videpage.sql

$BIN_MYSQL -u root < /tmp/videpage.sql ${MOD_NAME[$count]}

mv $WWW_DIRECTORY/${MOD_NAME[$count]}/config/LocalSettings.php $WWW_DIRECTORY/${MOD_NAME[$count]}

cd $DL_DIR/xml2sql

sed -i "741G" xml2sql.c
sed -i "741G" xml2sql.c
sed -i "741G" xml2sql.c
sed -i "741G" xml2sql.c

sed -i "742s/^/putcolumn(\&rev_tbl, \"NULL\", 0);/" xml2sql.c
sed -i "743s/^/putcolumn(\&rev_tbl, \"NULL\", 0);/" xml2sql.c

apt-get install --force-yes --assume-yes expat libexpat1-dev


./configure
make
make install


#ln -s / /cow
#xterm -title 'lampp security' -e "apt-get install --assume-yes --force-yes sun-java5-bin sun-java5-jre"



sed -i "52s/16/500/" /etc/mysql/my.cnf
  
sed -i "85s/^/#/" /etc/mysql/my.cnf
sed -i "86s/^/#/" /etc/mysql/my.cnf
/etc/init.d/mysql restart



#java -jar mwdumper.jar --format=sql:1.5 frwiki-latest-pages-articles.xml.bz2 | $BIN_MYSQL -u root --default-character-set=utf8 ${MOD_NAME[$count]} 


cd $DL_DIR
echo "bunzip2 -c frwiki-latest-pages-articles.xml.bz2 | xml2sql\n"
bunzip2 -c frwiki-latest-pages-articles.xml.bz2 | xml2sql
echo "/usr/bin/mysqlimport -u root ${MOD_NAME[$count]} /$DL_DIR/page.txt\n"
/usr/bin/mysqlimport -u root ${MOD_NAME[$count]} /$DL_DIR/page.txt
echo "/usr/bin/mysqlimport -u root ${MOD_NAME[$count]} /$DL_DIR/revision.txt"
/usr/bin/mysqlimport -u root ${MOD_NAME[$count]} /$DL_DIR/revision.txt
echo "/usr/bin/mysqlimport -u root ${MOD_NAME[$count]} /$DL_DIR/text.txt"
/usr/bin/mysqlimport -u root ${MOD_NAME[$count]} /$DL_DIR/text.txt


cd $DL_DIR 
echo "$BIN_MYSQL -u root < frwiki-latest-categorylinks.sql ${MOD_NAME[$count]}"
$BIN_MYSQL -u root < frwiki-latest-categorylinks.sql ${MOD_NAME[$count]}
echo "$BIN_MYSQL -u root < frwiki-latest-externallinks.sql ${MOD_NAME[$count]}"
$BIN_MYSQL -u root < frwiki-latest-externallinks.sql ${MOD_NAME[$count]}
echo "$BIN_MYSQL -u root < frwiki-latest-image.sql ${MOD_NAME[$count]}"
$BIN_MYSQL -u root < frwiki-latest-image.sql ${MOD_NAME[$count]}
echo "$BIN_MYSQL -u root < frwiki-latest-imagelinks.sql ${MOD_NAME[$count]}"
$BIN_MYSQL -u root < frwiki-latest-imagelinks.sql ${MOD_NAME[$count]}
echo "$BIN_MYSQL -u root < frwiki-latest-langlinks.sql ${MOD_NAME[$count]}"
$BIN_MYSQL -u root < frwiki-latest-langlinks.sql ${MOD_NAME[$count]}
echo "$BIN_MYSQL -u root < frwiki-latest-pagelinks.sql ${MOD_NAME[$count]}"
$BIN_MYSQL -u root < frwiki-latest-pagelinks.sql ${MOD_NAME[$count]}
echo "$BIN_MYSQL -u root < frwiki-latest-templatelinks.sql ${MOD_NAME[$count]}"
$BIN_MYSQL -u root < frwiki-latest-templatelinks.sql ${MOD_NAME[$count]}
echo "$BIN_MYSQL -u root < frwiki-latest-page.sql ${MOD_NAME[$count]}"
$BIN_MYSQL -u root < frwiki-latest-page.sql ${MOD_NAME[$count]}







echo "php $WWW_DIRECTORY/${MOD_NAME[$count]}/maintenance/refreshLinks.php --update > /tmp/refresh_links"
php $WWW_DIRECTORY/${MOD_NAME[$count]}/maintenance/refreshLinks.php --update > /tmp/refresh_links
#php $WWW_DIRECTORY/${MOD_NAME[$count]}/maintenance/initStats.php --update


done

}


#!/bin/bash
RMOD_ENGINE=1.0
RMOD_CATEGORY='Software'
RMOD_SUBCATEGORY='Servers'
RMOD_NAME='Elgg 1.1'
RMOD_AUTHOR='Oliv'
RMOD_VERSION=0.1
RMOD_DESCRIPTION='Social Networking'
RMOD_DESCRIPTION_FR='Réseaux sociaux'
RMOD_RUN_IN_CHROOT=True
RMOD_UPDATE_URL='http://cooperation-iws.gensys-net.eu/update/modules/'
RMOD_REQ_APACHE=True
RMOD_VERBOSE="Elgg is an open, flexible social networking engine, designed to run at the heart of any socially-aware application. Building on Elgg is easy, and because the engine handles common web application and social functionality for you, you can concentrate on developing your idea. "
RMOD_VERBOSE_FR="Elgg est un système de réseaux sociaux ouvert."


WWW_DIRECTORY=$(cat /tmp/web-path)
DL_DIR=$(cat /tmp/web_install-path)
BIN_MYSQL=$(cat /tmp/mysql-path)
SCRIPT_DIRECTORY=$(cat /tmp/script-path)
DISPLAY=127.0.0.1:5.0
LAMPP_DIRECTORY=$(cat /tmp/lampp-dir)
LANG_UI=$(cat /tmp/lang-wui)
#TEMP
MIRROIR=$(cat /tmp/mirroir)
URL_FREE=$(cat /tmp/url_mirroir)

INSTALL=$(cat /tmp/def_install)

#VARIABLES
#MYSQL PASSWORD
ELGG_MYSQL_PWD="ELGG_MYSQL_PWD"



SILENT=$(cat /tmp/silent)
. /tmp/app_params

NB_ELGG=${#elgg_name[*]}

for (( count=1; count<=$NB_ELGG; count++ ))
do
ELGG_MYSQL_PWD[$count]=${elgg_mysql_pwd[$count]}
MOD_NAME[$count]=${elgg_name[$count]}
done



#_______________________________________________________________________________________________
#________________________________________WGET_MIRROIR_FREE______________________________________

function WGET_MIRROIR_FREE
{
cd $DL_DIR
wget $URL_FREE/elgg-1.1-081130.tar.gz
tar -xzf elgg-1.1-081130.tar.gz



}

#_______________________________________________________________________________________________
#________________________________________FIN_WGET_MIRROIR_FREE__________________________________

#_______________________________________________________________________________________________
#________________________________________DOWNLOAD_______________________________________________

function DOWNLOAD
{

if  [ "$(echo "${MIRROIR}" | awk  '{print $1}')" == "B" ]; then

WGET_MIRROIR_FREE
fi


}


#_______________________________________________________________________________________________
#________________________________________FIN_DOWNLOAD___________________________________________


#_______________________________________________________________________________________________
#________________________________________INSTALL________________________________________________


function INSTALL
{

echo "I: Download Elgg"
DOWNLOAD
for (( count=1; count<=$NB_ELGG; count++ ))
do
##ELGG
cd $DL_DIR
mkdir $WWW_DIRECTORY/${MOD_NAME[$count]}
cp -Rf Elgg/* $WWW_DIRECTORY/${MOD_NAME[$count]}/.
sed -i "15s/Elgg/${MOD_NAME[$count]}/" $WWW_DIRECTORY/${MOD_NAME[$count]}/database.sql
sed -i "16s/Elgg/${MOD_NAME[$count]}/" $WWW_DIRECTORY/${MOD_NAME[$count]}/database.sql
$BIN_MYSQL -u root --default_character_set utf8 < $WWW_DIRECTORY/${MOD_NAME[$count]}/database.sql

echo "
grant all on ${MOD_NAME[$count]}.* to ${MOD_NAME[$count]}@localhost identified by '${ELGG_MYSQL_PWD[$count]}';
flush privileges;" > ELGG_db.sql

$BIN_MYSQL -u root < ELGG_db.sql mysql
rm ELGG_db.sql

sed -i "s/Elgg/${MOD_NAME[$count]}/g" $WWW_DIRECTORY/${MOD_NAME[$count]}/engine/settings.php
sed -i "s/mysql_pwd/${ELGG_MYSQL_PWD[$count]}/g" $WWW_DIRECTORY/${MOD_NAME[$count]}/engine/settings.php

echo "UPDATE ${MOD_NAME[$count]}.elggusers_entity SET email = '${elgg_admin_email[$count]}' WHERE elggusers_entity.guid =2 LIMIT 1 ;
UPDATE ${MOD_NAME[$count]}.elggsites_entity SET url = '/${MOD_NAME[$count]}/' WHERE elggsites_entity.guid =1 LIMIT 1 ;" > elgg_credential.sql

mkdir /var/Elgg
mkdir /var/Elgg/upload
chown -R www-data /var/Elgg/upload
mv /var/Elgg $LAMPP_DIRECTORY/server/
ln -s $LAMPP_DIRECTORY/server/Elgg /var/Elgg

chown -R www-data $WWW_DIRECTORY/${MOD_NAME[$count]}

done
a2enmod rewrite

/etc/init.d/apache2 restart 

}

#_______________________________________________________________________________________________
#________________________________________FIN_INSTALL____________________________________________

#_______________________________________________________________________________________________
#________________________________________CREATE_WUI_____________________________________________

function CREATE_WUI
{
for (( count=1; count<=$NB_ELGG; count++ ))
do
echo "
<item>
	<item_category>$RMOD_DESCRIPTION</item_category>
	<item_url>/${MOD_NAME[$count]}</item_url>
	<item_admin_url>/${MOD_NAME[$count]}</item_admin_url>
	<item_name>$RMOD_NAME</item_name>
	<item_desc>$RMOD_VERBOSE</item_desc>
	
</item>
" >> $WWW_DIRECTORY/cooperation-wui.xml
echo "
<item>
	<item_category>$RMOD_DESCRIPTION_FR</item_category>
	<item_url>/${MOD_NAME[$count]}</item_url>
	<item_admin_url>/${MOD_NAME[$count]}</item_admin_url>
	<item_name>$RMOD_NAME</item_name>
	<item_desc>$RMOD_VERBOSE_FR</item_desc>
	
</item>
" >> $WWW_DIRECTORY/cooperation-wui-fr.xml
done
}
#_______________________________________________________________________________________________
#________________________________________FIN_CREATE_WUI_________________________________________

#_______________________________________________________________________________________________
#________________________________________CREATE_INSTALL_SCRIPT__________________________________


function CREATE_INSTALL_SCRIPT
{

for (( count=1; count<=$NB_ELGG; count++ ))
do
echo "
#Elgg

" >> $LAMPP_DIRECTORY/share/lampp/config_post_install.sh
done
}

#_______________________________________________________________________________________________
#________________________________________FIN_CREATE_INSTALL_SCRIPT______________________________

echo "I: Install Elgg"
INSTALL
CREATE_WUI

CREATE_INSTALL_SCRIPT
echo "I: End of install Elgg"

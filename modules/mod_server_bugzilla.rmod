tar -xzf bugzilla-3.0.5.tar.gz
mv bugzilla-3.0.5 bugzilla
#rm cacti-0.8.7b.tar.gz
wget http://prdownloads.sourceforge.net/frenchmozilla/bugzilla-3.0.5.fr.tar.gz?download
tar -xzf bugzilla-3.0.5.fr.tar.gz -C bugzilla/template
wget http://ganderbay.net/dl/germzilla-3.0.5-1.utf-8.tar.gz
tar -xzf germzilla-3.0.5-1.utf-8.tar.gz -C bugzilla/template
}


#_______________________________________________________________________________________________
#________________________________________CHOOSE_PARAMETERS_GUI______________________________________

function CHOOSE_PARAMETERS_GUI
{
if [ "$(echo "${INSTALL}" | awk  '{print $1}')" == "A" ]; then 
NB_JOOMLA=1
NOM_JOOMLA[1]="Joomla"
else 
NB_JOOMLA=$(zenity --entry --text "$MESS_HOW_MANY Joomla $MESS_DO_YOU_WANT")
test $? -ne 0 && break # Bouton Annuler
while (echo $NB_JOOMLA | grep "[^0-9]") 
do
NB_JOOMLA=$(zenity --entry --text "$MESS_HOW_MANY Joomla $MESS_DO_YOU_WANT")
test $? -ne 0 && break # Bouton Annulerdone
done 

for (( count=1; count<=$NB_JOOMLA; count++ ))
do
NOM_JOOMLA[$count]=$(zenity --entry --text "$MESS_NAME $count JOOMLA")
test $? -ne 0 && break # Bouton Annuler

while (echo ${NOM_ZENPHOTO[$count]} | grep "[^a-zA-Z0-9]") 
do
NOM_JOOMLA[$count]=$(zenity --entry --text "$MESS_NAME $count JOOMLA")
test $? -ne 0 && break # Bouton Annulerdone
done 
done 


fi
export NB_JOOMLA=$NB_JOOMLA
export NOM_JOOMLA=$NOM_JOOMLA

}
#_______________________________________________________________________________________________
#________________________________________FIN_CHOOSE_PARAMETERS_GUI______________________________


#_______________________________________________________________________________________________
#________________________________________INSTALL________________________________________________


function INSTALL
{
echo "I: Download Joomla"

DOWNLOAD

#Joomla

for (( count=1; count<=$NB_JOOMLA; count++ ))
do
cd $DL_DIR
mkdir $WWW_DIRECTORY/${NOM_JOOMLA[$count]}
cp -Rf joomla/* $WWW_DIRECTORY/${NOM_JOOMLA[$count]}/.
echo "create database ${NOM_JOOMLA[$count]};
grant all on ${NOM_JOOMLA[$count]}.* to ${NOM_JOOMLA[$count]}@localhost identified by '$JOOMLA_MYSQL_PWD';
flush privileges;" > joomla_db.sql

$BIN_MYSQL -u root < joomla_db.sql mysql
rm joomla_db.sql

sed -i "131s/<?php echo \"\$DBhostname\"; ?>/localhost/" $WWW_DIRECTORY/${NOM_JOOMLA[$count]}/installation/install1.php
sed -i "141s/<?php echo \"\$DBuserName\"; ?>/${NOM_JOOMLA[$count]}/" $WWW_DIRECTORY/${NOM_JOOMLA[$count]}/installation/install1.php
sed -i "151s/<?php echo \"\$DBpassword\"; ?>/$JOOMLA_MYSQL_PWD/" $WWW_DIRECTORY/${NOM_JOOMLA[$count]}/installation/install1.php
sed -i "161s/<?php echo \"\$DBname\"; ?>/${NOM_JOOMLA[$count]}/" $WWW_DIRECTORY/${NOM_JOOMLA[$count]}/installation/install1.php


chown -R www-data $WWW_DIRECTORY/${NOM_JOOMLA[$count]}

done
}

#_______________________________________________________________________________________________
#________________________________________FIN_INSTALL____________________________________________

#_______________________________________________________________________________________________
#________________________________________CREATE_WUI_____________________________________________

function CREATE_WUI
{
for (( count=1; count<=$NB_JOOMLA; count++ ))

do
echo "<hr width=\"10%\">
$RMOD_DESCRIPTION | <a href=\"/${NOM_JOOMLA[$count]}\">${NOM_JOOMLA[$count]}</a><br>
" >> $WWW_DIRECTORY/cooperation-wui.frame.php
done

}
#_______________________________________________________________________________________________
#________________________________________FIN_CREATE_WUI_________________________________________

#_______________________________________________________________________________________________
#________________________________________CREATE_INSTALL_SCRIPT__________________________________


function CREATE_INSTALL_SCRIPT
{

for (( count=1; count<=$NB_JOOMLA; count++ ))

do
echo "
#Joomla
sed -i \"10s/$HOME_DIR/\/opt/\" $WWW_DIRECTORY/${NOM_JOOMLA[$count]}/configuration.php
sed -i \"11s/http:\/\/localhost//\" $WWW_DIRECTORY/${NOM_JOOMLA[$count]}/configuration.php
rm -r $WWW_DIRECTORY/${NOM_JOOMLA[$count]}/installation
" >> $LAMPP_DIRECTORY/share/lampp/config_post_install.sh
done

}

#_______________________________________________________________________________________________
#________________________________________FIN_CREATE_INSTALL_SCRIPT______________________________

echo "I: Install Joomla"
CHOICE_LANG
CHOOSE_PARAMETERS_GUI
INSTALL
CREATE_WUI
CREATE_INSTALL_SCRIPT
echo "I: End of install Joomla"

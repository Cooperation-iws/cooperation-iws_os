cd $DL_DIR
wget http://www.ossec.net/files/ui/ossec-wui-0.3.tar.gz
tar -zxf ossec-wui-0.3.tar.gz
#rm ossec-wui-0.3.tar.gz
mv ossec-wui-0.3 ossec-wui

}


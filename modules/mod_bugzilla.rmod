}

#_______________________________________________________________________________________________
#________________________________________FIN_WGET_MIRROIR_FREE__________________________________

#_______________________________________________________________________________________________
#________________________________________DOWNLOAD_______________________________________________

function DOWNLOAD
{
if [ "$(echo "${MIRROIR}" | awk  '{print $1}')" == "A" ]; then 

WGET_MIRROIR_WEB
fi
if  [ "$(echo "${MIRROIR}" | awk  '{print $1}')" == "B" ]; then

WGET_MIRROIR_FREE
fi
if  [ "$(echo "${MIRROIR}" | awk  '{print $1}')" == "C" ]; then


WGET_MIRROIR_LOCAL
fi

}



#_______________________________________________________________________________________________
#________________________________________CHOOSE_PARAMETERS_GUI______________________________________

function CHOOSE_PARAMETERS_GUI
{
if [ "$(echo "${INSTALL}" | awk  '{print $1}')" == "A" ]; then 
NOM_BUGZILLA="Bugzilla"
else 

NOM_BUGZILLA=$(zenity --entry --text "$MESS_NAME BUGZILLA")
test $? -ne 0 && break # Bouton Annuler
while (echo $NOM_BUGZILLA | grep "[^a-zA-Z0-9]") 
do
NOM_BUGZILLA=$(zenity --entry --text "$MESS_NAME BUGZILLA")
test $? -ne 0 && break # Bouton Annulerdone
done 
 

fi
export NOM_BUGZILLA=$NOM_BUGZILLA

}
#_______________________________________________________________________________________________
#________________________________________FIN_CHOOSE_PARAMETERS_GUI______________________________




#_______________________________________________________________________________________________
#________________________________________INSTALL_________________________________________________


function INSTALL 
{

DOWNLOAD

apt-get install  --assume-yes --force-yes  apache2 libapache2-mod-perl2 libtemplate-perl libmime-perl \
                libappconfig-perl libdbd-mysql-perl libtimedate-perl \
                libgd-gd2-perl libgd-text-perl libxml-twig-perl perlmagick \
                libemail-send-perl libemail-mime-modifier-perl libchart-perl \
                libgd-graph-perl libhtml-scrubber-perl 

echo "create database ${NOM_BUGZILLA};
grant all on ${NOM_BUGZILLA}.* to ${NOM_BUGZILLA}@localhost identified by '$BUGZILLA_MYSQL_PWD';
flush privileges;" > BUGZILLA_db.sql

$BIN_MYSQL -u root < BUGZILLA_db.sql mysql
rm BUGZILLA_db.sql
mkdir $WWW_DIRECTORY/${NOM_BUGZILLA}
cp -Rf bugzilla/* $WWW_DIRECTORY/${NOM_BUGZILLA}/.
cd $WWW_DIRECTORY/${NOM_BUGZILLA}
./checksetup.pl
sed -i -e "s/^\$db_name = '.*';/\$db_name = '${NOM_BUGZILLA}';/" \
       -e "s/^\$db_user = '.*';/\$db_user = '${NOM_BUGZILLA}';/" \
       -e "s/^\$db_pass = '.*';/\$db_pass = '$BUGZILLA_MYSQL_PWD';/" $WWW_DIRECTORY/${NOM_BUGZILLA}/localconfig
sed -i -e "s/^\$webservergroup = '.*';/\$webservergroup = 'www-data';/" $WWW_DIRECTORY/${NOM_BUGZILLA}/localconfig
./checksetup.pl
sed -i -e '/<\/VirtualHost>/i\
  <Directory "\/var\/www\/'${NOM_BUGZILLA}'">\
    Options +ExecCGI\
    AllowOverride Limit\
    DirectoryIndex index.cgi\
    AddHandler cgi-script .cgi\
  <\/Directory>' /etc/apache2/sites-available/default
/etc/init.d/apache2 reload

}

#_______________________________________________________________________________________________
#________________________________________FIN_INSTALL____________________________________________



#!/bin/bash

RMOD_ENGINE=1.0
RMOD_CATEGORY='Software'
RMOD_SUBCATEGORY='Servers'
RMOD_NAME='Cacti 0.8.7b'
RMOD_AUTHOR='Oliv'
RMOD_VERSION=0.1
RMOD_DESCRIPTION='Server load Admin'
RMOD_DESCRIPTION_FR='Suivi de charge serveur'
RMOD_RUN_IN_CHROOT=True
RMOD_UPDATE_URL='http://cooperation-iws.gensys-net.eu/update/modules/'
RMOD_REQ_APACHE=True
RMOD_VERBOSE="Cacti is an interface for rrd tools. Cacti allow to have traceability of serveur load."
RMOD_VERBOSE_FR="Cacti est une interface graphique Ã  l'outil rrd. Cacti permet notament de suivre la charge du serveur Cooperation-iws.  "



WWW_DIRECTORY=$(cat /tmp/web-path)
DL_DIR=$(cat /tmp/web_install-path)
BIN_MYSQL=$(cat /tmp/mysql-path)
SCRIPT_DIRECTORY=$(cat /tmp/script-path)
DISPLAY=127.0.0.1:5.0
LAMPP_DIRECTORY=$(cat /tmp/lampp-dir)
LANG_UI=$(cat /tmp/lang-wui)
SILENT=$(cat /tmp/silent)
. /tmp/app_params

DEB_DIST=$(cat /tmp/deb_dist)
#TEMP

URL_FREE=$(cat /tmp/url_mirroir)

INSTALL=$(cat /tmp/def_install)

#VARIABLES
#MYSQL PASSWORD
CACTI_MYSQL_PWD=$cacti_mysql_pwd
MOD_NAME=$cacti_name








#_______________________________________________________________________________________________
#________________________________________WGET_MIRROIR_FREE______________________________________

function WGET_MIRROIR_FREE
{
cd $DL_DIR
wget $URL_FREE/cacti_081101.tar.gz
tar -xzf cacti_081101.tar.gz

}

#_______________________________________________________________________________________________
#________________________________________FIN_WGET_MIRROIR_FREE__________________________________

#_______________________________________________________________________________________________
#________________________________________DOWNLOAD_______________________________________________

function DOWNLOAD
{
if  [ "$(echo "${MIRROIR}" | awk  '{print $1}')" == "B" ]; then

WGET_MIRROIR_FREE
fi

}


#_______________________________________________________________________________________________
#________________________________________FIN_DOWNLOAD___________________________________________




#_______________________________________________________________________________________________
#________________________________________INSTALL________________________________________________


function INSTALL
{
echo "I: Cacti download"
DOWNLOAD
export DEBIAN_FRONTEND=noninteractive
apt-get install --assume-yes --force-yes rrdtool snmp snmpd mysql-server 
apt-get remove --assume-yes --force-yes exim4-base
#Cacti config

echo "*/5 * * * * $apache_user /usr/bin/php $WWW_DIRECTORY/admin/$MOD_NAME/poller.php > /dev/null 2>&1" >> /etc/cron.d/cacti
sudo chmod +x /etc/cron.d/cacti

#Cacti 

cd $DL_DIR
mkdir $WWW_DIRECTORY/admin/$MOD_NAME
cp -Rf Cacti/* $WWW_DIRECTORY/admin/$MOD_NAME/.
sed -i "15s/cacti/$MOD_NAME/" $WWW_DIRECTORY/admin/$MOD_NAME/database.sql
sed -i "16s/cacti/$MOD_NAME/" $WWW_DIRECTORY/admin/$MOD_NAME/database.sql

$BIN_MYSQL -u root < $WWW_DIRECTORY/admin/$MOD_NAME/database.sql


echo "
grant all on $MOD_NAME.* to $MOD_NAME@localhost identified by '$CACTI_MYSQL_PWD';
flush privileges;
" > cacti_db.sql
$BIN_MYSQL -u root < cacti_db.sql 
rm cacti_db.sql
chmod -R 777 $WWW_DIRECTORY/admin/$MOD_NAME/
chown -R $apache_user:$apache_user $WWW_DIRECTORY/admin/$MOD_NAME/

sed -i "s/cacti/$MOD_NAME/g" $WWW_DIRECTORY/admin/$MOD_NAME/include/config.php
sed -i "s/CACTI_MYSQL_PWD/$CACTI_MYSQL_PWD/" $WWW_DIRECTORY/admin/$MOD_NAME/include/config.php
WWW_DIRECTORY_FOR_SED=$(echo $WWW_DIRECTORY | sed 's/\//\\\//g')
sed -i "s/\"\/var\/www\/admin\/Cacti\/include\"/\"$WWW_DIRECTORY_FOR_SED\/admin\/$MOD_NAME\/include\"/g" $WWW_DIRECTORY/admin/$MOD_NAME/include/global.php
sed -i "42s/Cacti/$MOD_NAME/" $WWW_DIRECTORY/admin/$MOD_NAME/include/global.php

echo "
#Cacti
chmod -R 777 $WWW_DIRECTORY/admin/$MOD_NAME/
chown -R $apache_user $WWW_DIRECTORY/admin/$MOD_NAME/

" >> /etc/rc.local


}

#_______________________________________________________________________________________________
#________________________________________FIN_INSTALL____________________________________________

#_______________________________________________________________________________________________
#________________________________________CREATE_WUI_____________________________________________

function CREATE_WUI
{
echo "
<item>
	<item_category>$RMOD_DESCRIPTION</item_category>
	<item_url>/admin/$MOD_NAME</item_url>
	<item_admin_url>/admin/$MOD_NAME</item_admin_url>
	<item_name>$RMOD_NAME</item_name>
	<item_desc>$RMOD_VERBOSE</item_desc>
</item>
" >> $WWW_DIRECTORY/admin/cooperation-wui.xml
echo "
<item>
	<item_category>$RMOD_DESCRIPTION_FR</item_category>
	<item_url>/admin/$MOD_NAME</item_url>
	<item_admin_url>/admin/$MOD_NAME</item_admin_url>
	<item_name>$RMOD_NAME</item_name>
	<item_desc>$RMOD_VERBOSE_FR</item_desc>
</item>
" >> $WWW_DIRECTORY/admin/cooperation-wui-fr.xml

echo "$RMOD_DESCRIPTION | <a href=\"/admin/$MOD_NAME\" >$MOD_NAME</a><br>
">> $WWW_DIRECTORY/admin/cooperation-wui.frame.php
}
#_______________________________________________________________________________________________
#________________________________________FIN_CREATE_WUI_________________________________________

#_______________________________________________________________________________________________
#________________________________________CREATE_INSTALL_SCRIPT__________________________________


function CREATE_INSTALL_SCRIPT
{

echo "
#CACTI
#rm -r $WWW_DIRECTORY/admin/$MOD_NAME/rra/*
rm -r $WWW_DIRECTORY/admin/$MOD_NAME/log/*
sudo chown -R $apache_user $WWW_DIRECTORY/admin/$MOD_NAME/rra
sudo chmod -R 777 $WWW_DIRECTORY/admin/$MOD_NAME/rra
sudo chown -R $apache_user $WWW_DIRECTORY/admin/$MOD_NAME/log
sudo chmod -R 777 $WWW_DIRECTORY/admin/$MOD_NAME/log
" >> $LAMPP_DIRECTORY/config_post_install.sh

}

#_______________________________________________________________________________________________
#________________________________________FIN_CREATE_INSTALL_SCRIPT______________________________

echo "I: Install Cacti"
INSTALL
CREATE_WUI
CREATE_INSTALL_SCRIPT
echo "I: End of Install Cacti"

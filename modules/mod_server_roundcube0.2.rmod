fi
}
#_______________________________________________________________________________________________
#__________________________________________FIN_CHOICE_LANG______________________________________


#_______________________________________________________________________________________________
#________________________________________WGET_MIRROIR_WEB_______________________________________


function WGET_MIRROIR_WEB
{
cd $DL_DIR
wget http://ovh.dl.sourceforge.net/sourceforge/roundcubemail/roundcubemail-0.2-beta.tar.gz
tar -xzf roundcubemail-0.2-beta.tar.gz
mv roundcubemail-0.2-beta roundcubemail
#rm moodle-latest-19.zip

}

#_______________________________________________________________________________________________
#________________________________________FIN_WGET_MIRROIR_WEB___________________________________

#_______________________________________________________________________________________________
#________________________________________WGET_MIRROIR_FREE______________________________________

function WGET_MIRROIR_FREE
{
cd $DL_DIR
wget $URL_FREE/roundcubemail-0.2-beta.tar.gz
tar -xzf roundcubemail-0.2-beta.tar.gz
mv roundcubemail-0.2-beta roundcubemail
#rm moodle-latest-19.zip

}

#_______________________________________________________________________________________________
#________________________________________FIN_WGET_MIRROIR_FREE__________________________________

#_______________________________________________________________________________________________
#________________________________________DOWNLOAD_______________________________________________

function DOWNLOAD
{
if [ "$(echo "${MIRROIR}" | awk  '{print $1}')" == "A" ]; then 

WGET_MIRROIR_WEB
fi
if  [ "$(echo "${MIRROIR}" | awk  '{print $1}')" == "B" ]; then

WGET_MIRROIR_FREE
fi

}


#_______________________________________________________________________________________________
#________________________________________FIN_DOWNLOAD___________________________________________

#_______________________________________________________________________________________________
#________________________________________CHOOSE_PARAMETERS_GUI______________________________________

function CHOOSE_PARAMETERS_GUI
{
if [ "$(echo "${INSTALL}" | awk  '{print $1}')" == "A" ]; then 
NOM_ROUNDCUBE="Roundcube"
else 

NOM_ROUNDCUBE=$(zenity --entry --text "$MESS_NAME ROUNDCUBE")
test $? -ne 0 && break # Bouton Annuler
while (echo $NOM_ROUNDCUBE | grep "[^a-zA-Z0-9]") 
do
NOM_ROUNDCUBE=$(zenity --entry --text "$MESS_NAME ROUNDCUBE")
test $? -ne 0 && break # Bouton Annulerdone
done 
 

fi
export NOM_ROUNDCUBE=$NOM_ROUNDCUBE

}
#_______________________________________________________________________________________________
#________________________________________FIN_CHOOSE_PARAMETERS_GUI______________________________


#_______________________________________________________________________________________________
#________________________________________INSTALL________________________________________________


function INSTALL
{
echo "I: Download Roundcube"
DOWNLOAD

##ROUNDCUBE
cd $DL_DIR
mkdir $WWW_DIRECTORY/$NOM_ROUNDCUBE
cp -Rf roundcubemail/* $WWW_DIRECTORY/$NOM_ROUNDCUBE/.

echo "create database ${NOM_ROUNDCUBE} DEFAULT CHARACTER SET utf8 COLLATE utf8_general_ci;
grant all on ${NOM_ROUNDCUBE}.* to ${NOM_ROUNDCUBE}@localhost identified by '$ROUNDCUBE_MYSQL_PWD';
flush privileges;" > ROUNDCUBE_db.sql

$BIN_MYSQL -u root < ROUNDCUBE_db.sql mysql
rm ROUNDCUBE_db.sql 
$BIN_MYSQL -u root <  $WWW_DIRECTORY/$NOM_ROUNDCUBE/SQL/mysql.initial.sql $NOM_ROUNDCUBE 

sed -i "s/mysql:\/\/roundcube:pass@localhost\/roundcubemail/mysql:\/\/${NOM_ROUNDCUBE}:$ROUNDCUBE_MYSQL_PWD@localhost\/${NOM_ROUNDCUBE}/" $WWW_DIRECTORY/$NOM_ROUNDCUBE/config/db.inc.php.dist
sed -i "55s/''/'localhost'/" $WWW_DIRECTORY/$NOM_ROUNDCUBE/config/main.inc.php.dist
mv $WWW_DIRECTORY/$NOM_ROUNDCUBE/config/db.inc.php.dist $WWW_DIRECTORY/$NOM_ROUNDCUBE/config/db.inc.php
mv $WWW_DIRECTORY/$NOM_ROUNDCUBE/config/main.inc.php.dist $WWW_DIRECTORY/$NOM_ROUNDCUBE/config/main.inc.php


chown -R www-data $WWW_DIRECTORY/$NOM_ROUNDCUBE/


}

#_______________________________________________________________________________________________
#________________________________________FIN_INSTALL____________________________________________

#_______________________________________________________________________________________________
#________________________________________CREATE_WUI_____________________________________________

function CREATE_WUI
{
echo "$RMOD_DESCRIPTION | <a href=\"/$NOM_ROUNDCUBE\" >$NOM_ROUNDCUBE</a><br>
" >> $WWW_DIRECTORY/cooperation-wui.frame.php
}
#_______________________________________________________________________________________________
#________________________________________FIN_CREATE_WUI_________________________________________

#_______________________________________________________________________________________________
#________________________________________CREATE_INSTALL_SCRIPT__________________________________


function CREATE_INSTALL_SCRIPT
{

echo "

#Roundcube
sed -i \"122s/''/'localhost'/\" $WWW_DIRECTORY/$NOM_ROUNDCUBE/platform/conf/claro_main.conf.php
" >> $LAMPP_DIRECTORY/share/lampp/config_post_install.sh

}

#_______________________________________________________________________________________________
#________________________________________FIN_CREATE_INSTALL_SCRIPT______________________________

echo "I: Install Roundcube"
CHOICE_LANG
CHOOSE_PARAMETERS_GUI
INSTALL
CREATE_WUI
CREATE_INSTALL_SCRIPT
echo "I: End of install Roundcube"

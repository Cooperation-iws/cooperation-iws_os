#_______________________________________________________________________________________________
#________________________________________INSTALL________________________________________________


function INSTALL
{

echo "I: Download Redmine"

apt-get install libmysql-ruby mysql-server subversion apache2 ruby rubygems irb ri rdoc ruby1.8-dev build-essential phpmyadmin rake libapache2-mod-fastcgi

gem install rails mongrel mongrel_cluster daemons -f --include-dependencies

ln -s /var/lib/gems/1.8/bin/mongrel_rails /usr/bin/mongrel_rails
ln -s /var/lib/gems/1.8/bin/rails /usr/bin/rails
ln -s /var/lib/gems/1.8/bin/mongrel_cluster_ctl /usr/bin/mongrel_cluster_ctl

svn co http://redmine.rubyforge.org/svn/trunk /var/redmine

echo "create database ${NOM_REDMINE};
grant all on ${NOM_REDMINE}.* to ${NOM_REDMINE}@localhost identified by '$REDMINE_MYSQL_PWD';
flush privileges;" > redmine_db.sql

$BIN_MYSQL -u root < redmine_db.sql mysql
rm redmine_db.sql

cd /var/redmin/config
sudo cp database.example.yml database.yml
sed -i "s/database: redmine/database: ${NOM_REDMINE}/" /var/redmin/config/database.yml
sed -i "s/username: root/username: ${NOM_REDMINE}/" /var/redmin/config/database.yml
sed -i "s/password:/password: $REDMINE_MYSQL_PWD/" /var/redmin/config/database.yml

rake db:migrate RAILS_ENV="production"

rake redmine:load_default_data RAILS_ENV="production"
ruby script/server -e production

cd /var/redmine
mongrel_rails cluster::configure -e production -p 8000 -N 3 -c /home/redmine --user www-data --group www-data
mongrel_rails cluster::start


mkdir /etc/mongrel_cluster
cd /etc/mongrel_cluster
ln -s /var/redmine/config/mongrel_cluster.yml /etc/mongrel_cluster/redmine.yml
cd /etc/init.d
cp /var/lib/gems/1.8/gems/mongrel_cluster-1.0.5/resources/mongrel_cluster /etc/init.d/
chmod +x /etc/init.d/mongrel_cluster
/usr/sbin/update-rc.d -f mongrel_cluster defaults
}


#________________________________________CHOOSE_PARAMETERS_GUI______________________________________

function CHOOSE_PARAMETERS_GUI
{
if [ "$(echo "${INSTALL}" | awk  '{print $1}')" == "A" ]; then 
NB_KT=1
NOM_KT[1]="KnowledgeTree"

else 
INST_KT="1"
NB_KT=$(zenity --entry --text "$MESS_HOW_MANY Knowledge Tree $MESS_DO_YOU_WANT")
test $? -ne 0 && break # Bouton Annuler
while (echo $NB_KT | grep "[^0-9]") 
do
NB_KT=$(zenity --entry --text "$MESS_HOW_MANY Knowledge Tree $MESS_DO_YOU_WANT")
test $? -ne 0 && break # Bouton Annulerdone
done 

for (( count=1; count<=$NB_KT; count++ ))
do

NOM_KT[$count]=$(zenity --entry --text "$MESS_NAME $count Knowledge Tree")
test $? -ne 0 && break # Bouton Annuler
while (echo ${NOM_KT[$count]} | grep "[^a-zA-Z0-9]") 
do
NOM_KT[$count]=$(zenity --entry --text "$MESS_NAME $count Knowledge Tree")
test $? -ne 0 && break # Bouton Annulerdone
done 
done 

fi
export NB_KT=$NB_KT
export NOM_KT=$NOM_KT

}

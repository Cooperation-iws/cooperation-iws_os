#_______________________________________________________________________________________________
#________________________________________WGET_MIRROIR_WEB_______________________________________


function WGET_MIRROIR_WEB
{
cd $DL_DIR


wget http://www.cacti.net/downloads/cacti-0.8.7b.tar.gz
tar -xzf cacti-0.8.7b.tar.gz
mv cacti-0.8.7b cacti
#rm cacti-0.8.7b.tar.gz

}

#_______________________________________________________________________________________________
#________________________________________FIN_WGET_MIRROIR_WEB___________________________________

#_______________________________________________________________________________________________
#________________________________________WGET_MIRROIR_LOCAL_____________________________________

function WGET_MIRROIR_LOCAL
{

cd $DL_DIR
wget http://$MIRROIR_URL/mirroir/cacti-0.8.7b.tar.gz
tar -xvzf cacti-0.8.7b.tar.gz
mv cacti-0.8.7b cacti
}

#_______________________________________________________________________________________________
#________________________________________FIN_WGET_MIRROIR_LOCAL_________________________________

#_______________________________________________________________________________________________
#________________________________________WGET_MIRROIR_FREE______________________________________

function WGET_MIRROIR_FREE
{
cd $DL_DIR
wget $URL_FREE/cacti-0.8.7b.tar.gz
tar -xzf cacti-0.8.7b.tar.gz
mv cacti-0.8.7b cacti

}

#_______________________________________________________________________________________________
#________________________________________FIN_WGET_MIRROIR_FREE__________________________________

#_______________________________________________________________________________________________
#________________________________________DOWNLOAD_______________________________________________

function DOWNLOAD
{
if [ "$(echo "${MIRROIR}" | awk  '{print $1}')" == "A" ]; then 

WGET_MIRROIR_WEB
fi
if  [ "$(echo "${MIRROIR}" | awk  '{print $1}')" == "B" ]; then

WGET_MIRROIR_FREE
fi
if  [ "$(echo "${MIRROIR}" | awk  '{print $1}')" == "C" ]; then


WGET_MIRROIR_LOCAL
fi

}


#_______________________________________________________________________________________________
#________________________________________FIN_DOWNLOAD___________________________________________

#_______________________________________________________________________________________________
#________________________________________CHOOSE_PARAMETERS_GUI______________________________________

function CHOOSE_PARAMETERS_GUI
{
if [ "$(echo "${INSTALL}" | awk  '{print $1}')" == "A" ]; then 
NOM_CACTI="Cacti"
else 

NOM_CACTI=$(zenity --entry --text "$MESS_NAME CACTI")
test $? -ne 0 && break # Bouton Annuler
while (echo $NOM_CACTI | grep "[^a-zA-Z0-9]") 
do
NOM_CACTI=$(zenity --entry --text "$MESS_NAME CACTI")
test $? -ne 0 && break # Bouton Annulerdone
done 
 

fi
export NOM_CACTI=$NOM_CACTI

}
#_______________________________________________________________________________________________
#________________________________________FIN_CHOOSE_PARAMETERS_GUI______________________________


#_______________________________________________________________________________________________
#________________________________________INSTALL________________________________________________


function INSTALL
{
echo "I: Cacti download"
DOWNLOAD

apt-get install --assume-yes --force-yes rrdtool snmp snmpd 

#Cacti config

echo "*/5 * * * * www-data /usr/bin/php $WWW_DIRECTORY/admin/$NOM_CACTI/poller.php > /dev/null 2>&1" >> /etc/cron.d/cacti
sudo chmod +x /etc/cron.d/cacti

#Cacti 

cd $DL_DIR
mkdir $WWW_DIRECTORY/admin/$NOM_CACTI
cp -Rf cacti/* $WWW_DIRECTORY/admin/$NOM_CACTI/.
echo "create database cacti;
grant all on cacti.* to cacti@localhost identified by '$CACTI_MYSQL_PWD';
flush privileges;
" > cacti_db.sql
$BIN_MYSQL -u root < cacti_db.sql mysql
rm cacti_db.sql
chmod -R 777 $WWW_DIRECTORY/admin/$NOM_CACTI/
chown -R www-data $WWW_DIRECTORY/admin/$NOM_CACTI/
$BIN_MYSQL -u root < $WWW_DIRECTORY/admin/$NOM_CACTI/cacti.sql cacti
cat $WWW_DIRECTORY/admin/$NOM_CACTI/include/config.php | sed -i -e 's/database_username = "cactiuser"/database_username = "cacti"/' $WWW_DIRECTORY/admin/$NOM_CACTI/include/config.php
cat $WWW_DIRECTORY/admin/$NOM_CACTI/include/config.php | sed -i -e "s/database_password = \"cactiuser\"/database_password = \"$CACTI_MYSQL_PWD\"/" $WWW_DIRECTORY/admin/$NOM_CACTI/include/config.php
#cat $WWW_DIRECTORY/admin/$NOM_CACTI/install/index.php | sed -i -e 's/"\/usr\/local\/sbin"/"\/usr\/local\/sbin", "\/opt\/lampp\/bin", "\/opt\/lampp\/sbin"/' $WWW_DIRECTORY/admin/$NOM_CACTI/install/index.php
cat $WWW_DIRECTORY/admin/$NOM_CACTI/include/global.php | sed -i -e "s/dirname(__FILE__)/\"\/var\/www\/admin\/$NOM_CACTI\/include\"/g" $WWW_DIRECTORY/admin/$NOM_CACTI/include/global.php

echo "
#Cacti
chmod -R 777 $WWW_DIRECTORY/admin/$NOM_CACTI/
chown -R www-data $WWW_DIRECTORY/admin/$NOM_CACTI/

" >> /etc/rc.local


}

#_______________________________________________________________________________________________
#________________________________________FIN_INSTALL____________________________________________


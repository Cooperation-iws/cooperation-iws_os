wget -O /usr/src/linux-2.6.20.tar.bz2 $URL_FREE/linux-2.6.20.tar.bz2

cd /usr/src
tar zxf kerrighed-latest.tar.gz
tar jxf linux-2.6.20.tar.bz2
cd kerrighed-*
./configure --with-kernel=/usr/src/linux-2.6.20 
echo "PRESS ENTER"

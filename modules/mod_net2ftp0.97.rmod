}
#_______________________________________________________________________________________________
#__________________________________________FIN_LANGEN___________________________________________


#_______________________________________________________________________________________________
#__________________________________________CHOICE_LANG___________________________________________

function CHOICE_LANG
{
if [ "$(echo "${LANG_UI}" | awk  '{print $1}')" == "FR" ]; then
LANGFR

else
LANGEN

fi
}
#_______________________________________________________________________________________________
#__________________________________________FIN_CHOICE_LANG______________________________________


#_______________________________________________________________________________________________
#________________________________________WGET_MIRROIR_WEB_______________________________________


function WGET_MIRROIR_WEB
{
cd $DL_DIR
wget http://www.net2ftp.com/download/net2ftp_v0.97.zip
unzip -q net2ftp_v0.97.zip
mv net2ftp_v0.97 net2ftp

}

#_______________________________________________________________________________________________
#________________________________________FIN_WGET_MIRROIR_WEB___________________________________

#_______________________________________________________________________________________________
#________________________________________WGET_MIRROIR_LOCAL_____________________________________

function WGET_MIRROIR_LOCAL
{

cd $DL_DIR
wget http://$MIRROIR_URL/mirroir/net2ftp_v0.96.zip
unzip -q net2ftp_v0.96.zip
mv net2ftp_v0.96 net2ftp
}

#_______________________________________________________________________________________________
#________________________________________FIN_WGET_MIRROIR_LOCAL_________________________________

#_______________________________________________________________________________________________
#________________________________________WGET_MIRROIR_FREE______________________________________

function WGET_MIRROIR_FREE
{
cd $DL_DIR
wget $URL_FREE/net2ftp_v0.97.zip
unzip -q net2ftp_v0.97.zip
mv net2ftp_v0.97 net2ftp
}

#_______________________________________________________________________________________________
#________________________________________FIN_WGET_MIRROIR_FREE__________________________________


#_______________________________________________________________________________________________
#________________________________________DOWNLOAD_______________________________________________

function DOWNLOAD
{
if [ "$(echo "${MIRROIR}" | awk  '{print $1}')" == "A" ]; then 

WGET_MIRROIR_WEB
fi
if  [ "$(echo "${MIRROIR}" | awk  '{print $1}')" == "B" ]; then

WGET_MIRROIR_FREE
fi
if  [ "$(echo "${MIRROIR}" | awk  '{print $1}')" == "C" ]; then


WGET_MIRROIR_LOCAL
fi

}


#_______________________________________________________________________________________________
#________________________________________FIN_DOWNLOAD___________________________________________

#_______________________________________________________________________________________________
#________________________________________CHOOSE_PARAMETERS_GUI______________________________________

function CHOOSE_PARAMETERS_GUI
{
if [ "$(echo "${INSTALL}" | awk  '{print $1}')" == "A" ]; then 
NOM_NET2FTP="Net2ftp"
else 
NOM_NET2FTP=$(zenity --entry --text "$MESS_NAME NET2FTP")
test $? -ne 0 && break # Bouton Annuler

while (echo $NET2FTP | grep "[^a-zA-Z0-9]") 
do
NOM_NET2FTP=$(zenity --entry --text "$MESS_NAME NET2FTP")
test $? -ne 0 && break # Bouton Annulerdone
done
fi
export NET2FTP=$NET2FTP

}
#_______________________________________________________________________________________________
#________________________________________FIN_CHOOSE_PARAMETERS_GUI______________________________


#_______________________________________________________________________________________________
#________________________________________INSTALL________________________________________________


function INSTALL
{
echo "I: Download Net2ftp"
DOWNLOAD

##NET2FTP
cd $DL_DIR
mkdir $WWW_DIRECTORY/admin/$NOM_NET2FTP
cp -Rf net2ftp/* $WWW_DIRECTORY/admin/$NOM_NET2FTP/.
echo "create database $NOM_NET2FTP;
grant all on $NOM_NET2FTP.* to $NOM_NET2FTP@localhost identified by '$NET2FTP_MYSQL_PWD';
flush privileges;" > net2ftp_db.sql

$BIN_MYSQL -u root < net2ftp_db.sql mysql
rm net2ftp_db.sql
$BIN_MYSQL -u root < $WWW_DIRECTORY/admin/$NOM_NET2FTP/create_tables.sql $NOM_NET2FTP
rm -r $WWW_DIRECTORY/admin/$NOM_NET2FTP/integration_in_other_PHP_applications
mv $WWW_DIRECTORY/admin/$NOM_NET2FTP/files_to_upload/* $WWW_DIRECTORY/admin/$NOM_NET2FTP/.
cat $WWW_DIRECTORY/admin/$NOM_NET2FTP/settings.inc.php | sed -i -e "54s/\"\"/\"cooperation\"/" $WWW_DIRECTORY/admin/$NOM_NET2FTP/settings.inc.php
cat $WWW_DIRECTORY/admin/$NOM_NET2FTP/settings.inc.php | sed -i -e "71s/\"no\"/\"yes\"/" $WWW_DIRECTORY/admin/$NOM_NET2FTP/settings.inc.php
cat $WWW_DIRECTORY/admin/$NOM_NET2FTP/settings.inc.php | sed -i -e "74s/\"\"/\"$NOM_NET2FTP\"/" $WWW_DIRECTORY/admin/$NOM_NET2FTP/settings.inc.php
cat $WWW_DIRECTORY/admin/$NOM_NET2FTP/settings.inc.php | sed -i -e "75s/\"\"/\"$NET2FTP_MYSQL_PWD\"/" $WWW_DIRECTORY/admin/$NOM_NET2FTP/settings.inc.php
cat $WWW_DIRECTORY/admin/$NOM_NET2FTP/settings.inc.php | sed -i -e "76s/\"\"/\"$NOM_NET2FTP\"/" $WWW_DIRECTORY/admin/$NOM_NET2FTP/settings.inc.php
chmod -R 777 $WWW_DIRECTORY/admin/$NOM_NET2FTP/

}

#_______________________________________________________________________________________________
#________________________________________FIN_INSTALL____________________________________________

#_______________________________________________________________________________________________
#________________________________________CREATE_WUI_____________________________________________

function CREATE_WUI
{
echo "<hr width=\"10%\">
$RMOD_DESCRIPTION | <a href=\"/admin/$NOM_NET2FTP\">$NOM_NET2FTP</a><br>
">> $WWW_DIRECTORY/admin/cooperation-wui.frame.php
}
#_______________________________________________________________________________________________
#________________________________________FIN_CREATE_WUI_________________________________________


echo "I: Install Net2ftp"
CHOICE_LANG

CHOOSE_PARAMETERS_GUI
INSTALL
CREATE_WUI
echo "I: end of install Net2ftp"

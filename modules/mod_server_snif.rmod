#_______________________________________________________________________________________________
#________________________________________WGET_MIRROIR_WEB_______________________________________


function WGET_MIRROIR_WEB
{
cd $DL_DIR
MESSAGE="snif download"
echo -e '\E[37;44m'"\033[1m $MESSAGE \033[0m"
wget http://www.bitfolge.de/download/snif_152.zip
mkdir snif
cd snif
unzip ../snif_152.zip
rm -r subdir
}

#_______________________________________________________________________________________________
#________________________________________FIN_WGET_MIRROIR_WEB___________________________________


#_______________________________________________________________________________________________
#________________________________________WGET_MIRROIR_FREE______________________________________

function WGET_MIRROIR_FREE
{
cd $DL_DIR
MESSAGE="snif download"
echo -e '\E[37;44m'"\033[1m $MESSAGE \033[0m"
wget $URL_FREE/snif_152.zip
mkdir snif
cd snif
unzip ../snif_152.zip
rm -r subdir
}

#_______________________________________________________________________________________________
#________________________________________FIN_WGET_MIRROIR_FREE__________________________________

#_______________________________________________________________________________________________
#________________________________________DOWNLOAD_______________________________________________

function DOWNLOAD
{
if [ "$(echo "${MIRROIR}" | awk  '{print $1}')" == "A" ]; then 

WGET_MIRROIR_WEB
fi
if  [ "$(echo "${MIRROIR}" | awk  '{print $1}')" == "B" ]; then

WGET_MIRROIR_FREE
fi

}


#_______________________________________________________________________________________________
#________________________________________FIN_DOWNLOAD___________________________________________

#_______________________________________________________________________________________________
#________________________________________CHOOSE_PARAMETERS_GUI______________________________________

function CHOOSE_PARAMETERS_GUI
{
if [ "$(echo "${INSTALL}" | awk  '{print $1}')" == "A" ]; then 
NB_SNIF=1
MOD_NAME[1]="Snif"

else 

NB_SNIF=$(zenity --entry --text "Combien de Snif voulez vous installez ?")
test $? -ne 0 && break # Bouton Annuler
while (echo $NB_SNIF| grep "[^0-9]") 
do
NB_SNIF=$(zenity --entry --text "Combien de Snif voulez vous installez ?")
test $? -ne 0 && break # Bouton Annulerdone
done 

for (( count=1; count<=$NB_SNIF; count++ ))
do
MOD_NAME[$count]=$(zenity --entry --text "$MESS_NAME $count SNIF")
test $? -ne 0 && break # Bouton Annuler
while (echo ${MOD_NAME[$count]} | grep "[^a-zA-Z0-9]") 
do
MOD_NAME[$count]=$(zenity --entry --text "$MESS_NAME $count SNIF")
test $? -ne 0 && break # Bouton Annulerdone
done 

done 



fi

export NB_SNIF=$NB_SNIF
export MOD_NAME=$MOD_NAME
}
#_______________________________________________________________________________________________
#________________________________________FIN_CHOOSE_PARAMETERS_GUI______________________________


#_______________________________________________________________________________________________
#________________________________________INSTALL________________________________________________


function INSTALL
{
MESSAGE="I: Download Snif"

DOWNLOAD

#SNIF
MESSAGE="Snif paramÃ©trage"
echo -e '\E[37;44m'"\033[1m $MESSAGE \033[0m"

for (( count=1; count<=$NB_SNIF; count++ ))
do
cd $DL_DIR
mkdir $WWW_DIRECTORY/${MOD_NAME[$count]}
cp -Rf snif/* $WWW_DIRECTORY/${MOD_NAME[$count]}/.

cat $WWW_DIRECTORY/${MOD_NAME[$count]}/index.php | sed -i -e "1967s/444444/cf3a12/" $WWW_DIRECTORY/${MOD_NAME[$count]}/index.php
cat $WWW_DIRECTORY/${MOD_NAME[$count]}/index.php | sed -i -e "1971s/000000/9499ac/" $WWW_DIRECTORY/${MOD_NAME[$count]}/index.php
cat $WWW_DIRECTORY/${MOD_NAME[$count]}/index.php | sed -i -e "1978s/444444/aa3b3b/" $WWW_DIRECTORY/${MOD_NAME[$count]}/index.php
cat $WWW_DIRECTORY/${MOD_NAME[$count]}/index.php | sed -i -e "1987s/eeeeee/e7d9d9/" $WWW_DIRECTORY/${MOD_NAME[$count]}/index.php
cat $WWW_DIRECTORY/${MOD_NAME[$count]}/index.php | sed -i -e "1990s/dddddd/ffffff/" $WWW_DIRECTORY/${MOD_NAME[$count]}/index.php
cat $WWW_DIRECTORY/${MOD_NAME[$count]}/index.php | sed -i -e "498s/false/true/" $WWW_DIRECTORY/${MOD_NAME[$count]}/index.php
cat $WWW_DIRECTORY/${MOD_NAME[$count]}/index.php | sed -i -e "512s/30/0/" $WWW_DIRECTORY/${MOD_NAME[$count]}/index.php



echo "Configure Samba Server to share this directory ?"
echo "[Y/n]"
read r1 < /dev/tty

if [ "$(echo $r1 | awk  '{print $1}')" != "n" ]; then


echo "Protect this directory with a password ?"
echo "[N/y]"
read r3 < /dev/tty
if [ "$(echo $r3 | awk  '{print $1}')" != "y" ]; then
echo "[${MOD_NAME[$count]}]
	comment = ${MOD_NAME[$count]}
	writeable = yes
	public = yes
	path = /var/www/${MOD_NAME[$count]}
	
" >> /var/share/etc/samba/smb.conf

else
echo "[${MOD_NAME[$count]}]
	comment = ${MOD_NAME[$count]}
	writeable = yes
	public = yes
	path = /var/www/${MOD_NAME[$count]}
	valid users = www-data
" >> /var/share/etc/samba/smb.conf
smbpasswd -a www-data
fi

fi

chown -R www-data $WWW_DIRECTORY/${MOD_NAME[$count]}


done

}

#_______________________________________________________________________________________________
#________________________________________FIN_INSTALL____________________________________________

#_______________________________________________________________________________________________
#________________________________________CREATE_WUI_____________________________________________

function CREATE_WUI
{
for (( count=1; count<=$NB_SNIF; count++ ))

do
echo "
<item>
<item_category>$RMOD_DESCRIPTION</item_category>
<item_url>/${MOD_NAME[$count]}</item_url>
<item_name>$RMOD_NAME</item_name>
<item_desc>$RMOD_VERBOSE</item_desc>
<item_admin_url>/${MOD_NAME[$count]}</item_admin_url>
</item>
" >> $WWW_DIRECTORY/cooperation-wui.xml

done
}
#_______________________________________________________________________________________________
#________________________________________FIN_CREATE_WUI_________________________________________

echo "I: Install Snif"
CHOICE_LANG
CHOOSE_PARAMETERS_GUI
INSTALL
CREATE_WUI
echo "I: End of Install Snif"

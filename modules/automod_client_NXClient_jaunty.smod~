#!/bin/sh

RMOD_ENGINE=1.0
RMOD_CATEGORY='Software'
RMOD_SUBCATEGORY='Client'
RMOD_NAME='NX Jaunty Client'
RMOD_AUTHOR='Oliv'
RMOD_VERSION=0.2
RMOD_DESCRIPTION='NoMachine NX remote admin management client'
RMOD_RUN_IN_CHROOT=True
RMOD_UPDATE_URL='http://cooperation-iws.gensys-net.eu/update/modules/'
LIVEUSER=$(cat /tmp/user)
URL_FREE=$(cat /tmp/url_mirroir)

echo "I: config nx"
cd /tmp
wget $URL_FREE/nxclient_3.3.0-6_i386.deb
dpkg -i nxclient_3.3.0-6_i386.deb

cat << EOT_EOT >> /etc/rc.local
echo '
Section "ServerFlags"
Option "AutoAddDevices" "false"
EndSection' >> /etc/X11/xorg.conf

/etc/init.d/gdm restart
/etc/init.d/kdm restart


EOT_EOT



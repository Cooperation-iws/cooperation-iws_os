#!/bin/bash


RMOD_ENGINE=1.0
RMOD_CATEGORY='Software'
RMOD_SUBCATEGORY='Servers'
RMOD_NAME='Ossec 1.5.1 standalone'
RMOD_AUTHOR='Oliv'
RMOD_VERSION=0.2
RMOD_DESCRIPTION='Host based Intrusion Detection System'
RMOD_DESCRIPTION_FR="Système de détection d'intrusion orienté machine"
RMOD_VERBOSE="Ossec is an HIDS (Host Based Intrusion Detection System). "
RMOD_VERBOSE_FR="Ossec est un HIDS (Host Based Intrusion Detection System), un système de détection d'intrusion d'une machine.   "

RMOD_RUN_IN_CHROOT=True
RMOD_UPDATE_URL='http://cooperation-iws.gensys-net.eu/update/modules/'
RMOD_REQ_APACHE=True
SILENT=$(cat /tmp/silent)
if [ "$(echo $SILENT | awk  '{print $1}')" != "" ]; then
. /tmp/app_params
else
echo "---------Cooperation-iws---------"
echo " What's the email address for ossec reporting ?-------"
read ossec_report_address < /dev/tty
fi


WWW_DIRECTORY=$(cat /tmp/web-path)
DL_DIR=$(cat /tmp/web_install-path)
BIN_MYSQL=$(cat /tmp/mysql-path)
LAMPP_DIRECTORY=$(cat /tmp/script-path)
DISPLAY=127.0.0.1:5.0
LAMPP_DIRECTORY=$(cat /tmp/lampp-dir)
LANG_UI=$(cat /tmp/lang-wui)
HOSTNAME=$(cat /tmp/hostname)

#TEMP
MIRROIR=$(cat /tmp/mirroir)
URL_FREE=$(cat /tmp/url_mirroir)
INSTALL=$(cat /tmp/def_install)
MOD_NAME="Ossec"
#_______________________________________________________________________________________________
#________________________________________WGET_MIRROIR_WEB_______________________________________


function WGET_MIRROIR_WEB
{
cd $DL_DIR
wget http://www.ossec.net/files/ossec-hids-1.5.1.tar.gz
tar -zxf ossec-hids-*.tar.gz
mv ossec-hids-1.5.1 ossec-hids

cd $DL_DIR
wget http://www.ossec.net/files/ui/ossec-wui-0.3.tar.gz
tar -zxf ossec-wui-0.3.tar.gz
#rm ossec-wui-0.3.tar.gz
mv ossec-wui-0.3 ossec-wui

}

#_______________________________________________________________________________________________
#________________________________________FIN_WGET_MIRROIR_WEB___________________________________

#_______________________________________________________________________________________________
#________________________________________WGET_MIRROIR_FREE______________________________________

function WGET_MIRROIR_FREE
{
cd $DL_DIR
wget $URL_FREE/ossec-hids-1.5.1.tar.gz
tar -zxf ossec-hids-*.tar.gz
mv ossec-hids-1.5.1 ossec-hids
#rm ossec-hids-*.tar.gz

cd $DL_DIR
wget $URL_FREE/ossec-wui-0.3.tar.gz
tar -zxf ossec-wui-0.3.tar.gz
#rm ossec-wui-0.3.tar.gz
mv ossec-wui-0.3 ossec-wui
}

#_______________________________________________________________________________________________
#________________________________________FIN_WGET_MIRROIR_FREE__________________________________

#_______________________________________________________________________________________________
#________________________________________DOWNLOAD_______________________________________________

function DOWNLOAD
{
if [ "$(echo "${MIRROIR}" | awk  '{print $1}')" == "A" ]; then 

WGET_MIRROIR_WEB
fi
if  [ "$(echo "${MIRROIR}" | awk  '{print $1}')" == "B" ]; then

WGET_MIRROIR_FREE
fi

}


#_______________________________________________________________________________________________
#________________________________________FIN_DOWNLOAD___________________________________________


#_______________________________________________________________________________________________
#________________________________________CHOOSE_PARAMETERS_GUI______________________________________




#_______________________________________________________________________________________________
#________________________________________FIN_CHOOSE_PARAMETERS_GUI______________________________

#_______________________________________________________________________________________________
#________________________________________INSTALL________________________________________________


function INSTALL
{
echo "I: Download Ossec"
DOWNLOAD
apt-get install --assume-yes --force-yes build-essential

#OSSEC config
mkdir /tmp/ossec
cp -Rf $DL_DIR/ossec-hids/* /tmp/ossec/.


cd /tmp/ossec
chmod -R 777 ../ossec
chown -R 777 ../ossec
sed -i "31s/OSSEC Notification/Cooperation-iws - OSSEC Notification/" src/os_maild/maild.h
export USER_ENABLE_EMAIL="y"
export USER_EMAIL_ADDRESS=$ossec_report_address
export EMAILHOST="localhost"
export INSTYPE="server"
export USER_NO_STOP="yes"
export USER_LANGUAGE="en"
export USER_EMAIL_SMTP="localhost"
export USER_ENABLE_SYSCHECK="yes"
export USER_ENABLE_ROOTCHECK="yes"
export USER_INSTALL_TYPE="local"
export USER_DIR="/var/ossec"
export ACTIVERESPONSE="no"
export USER_ENABLE_ACTIVE_RESPONSE="n"
export USER_ENABLE_SYSLOG="n"
./install.sh
usermod -u501 ossec
usermod -u502 ossecm
usermod -u503 ossecr
#./install.sh
grep -q '^ossec' /etc/group && sed -i -e "/^ossec/s/$/$apache_user/" /etc/group


cat /etc/gdm/gdm.conf | sed -i -e "s/Exclude=nobody/Exclude=nobody,ossec,ossecm,ossecr/" /etc/gdm/gdm.conf

#ossec-wui 
cd $DL_DIR
mkdir $WWW_DIRECTORY/admin/$MOD_NAME
cp -Rf ossec-wui/* $WWW_DIRECTORY/admin/$MOD_NAME/.
cd $WWW_DIRECTORY/admin/$MOD_NAME
echo "## Server Wui Config"
mkdir tmp >/dev/null 2>&1
chmod 770 tmp/
chgrp nogroup tmp/
chown -R $apache_user:$apache_user $WWW_DIRECTORY/admin/$MOD_NAME
chmod -R 777 $WWW_DIRECTORY/admin/$MOD_NAME

mv /var/ossec $LAMPP_DIRECTORY/var
ln -s $LAMPP_DIRECTORY/var/ossec /var/ossec

cat << EOT > /etc/init.d/ossec
#!/bin/bash

PIDFILE=/var/run/ossec.pid

set -e

case "\$1" in
    start)
    if [ -f \$PIDFILE ]; then
      echo "Ossec server has already started."
      sleep 5
      exit
    fi
      echo "Starting Ossec server"
      $LAMPP_DIRECTORY/ossec/bin/ossec-control start & > /dev/null 2>&1
      touch \$PIDFILE
    ;;
    stop)
    if [ -f \$PIDFILE ]; then
      echo "Stopping Ossec server."
      $LAMPP_DIRECTORY/ossec/bin/ossec-control stop & > /dev/null 2>&1
      rm -f \$PIDFILE
      exit
    fi
      echo "Ossec server is not running."
      exit
    ;;
    *)
    echo "Usage: \$0 {start|stop}"
    exit 1
esac
exit 0
EOT

chmod 0755 /etc/init.d/ossec

update-rc.d ossec defaults



echo "
#OSSEC


" >> /etc/rc.local




}

#_______________________________________________________________________________________________
#________________________________________FIN_INSTALL____________________________________________

#_______________________________________________________________________________________________
#________________________________________CREATE_WUI_____________________________________________

function CREATE_WUI
{
echo "
<item>
	<item_category>$RMOD_DESCRIPTION</item_category>
	<item_url>/admin/$MOD_NAME</item_url>
	<item_name>$RMOD_NAME</item_name>
	<item_desc>$RMOD_VERBOSE</item_desc>
	<item_admin_url>/${MOD_NAME[$count]}</item_admin_url>
	<item_init_start>/etc/init.d/ossec start</item_init_start>
	<item_init_stop>/etc/init.d/ossec stop</item_init_stop>
</item>
" >> $WWW_DIRECTORY/admin/cooperation-wui.xml
echo "
<item>
	<item_category>$RMOD_DESCRIPTION_FR</item_category>
	<item_url>/admin/$MOD_NAME</item_url>
	<item_name>$RMOD_NAME</item_name>
	<item_desc>$RMOD_VERBOSE_FR</item_desc>
	<item_admin_url>/${MOD_NAME[$count]}</item_admin_url>
	<item_init_start>/etc/init.d/ossec start</item_init_start>
	<item_init_stop>/etc/init.d/ossec stop</item_init_stop>
</item>
" >> $WWW_DIRECTORY/admin/cooperation-wui-fr.xml

}
#_______________________________________________________________________________________________
#________________________________________FIN_CREATE_WUI_________________________________________

echo "I: Install Ossec"
INSTALL
CREATE_WUI
echo "I: End of install Ossec"

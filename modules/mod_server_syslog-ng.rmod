#________________________________________INSTALL________________________________________________


function INSTALL
{
echo "I: Cacti download"
DOWNLOAD

apt-get install --assume-yes --force-yes syslog-ng
aptitude install -y msttcorefonts

#Cacti config

echo "
@daily php $WWW_DIRECTORY/admin/$MOD_NAME/scripts/logrotate.php >> /var/log/php-syslog-ng/logrotate.log 
@daily find $WWW_DIRECTORY/admin/$MOD_NAME/html/jpcache/ -atime 1 -exec rm -f '{}' ';' 
*/5 * * * * php $WWW_DIRECTORY/admin/$MOD_NAME/scripts/reloadcache.php >> /var/log/php-syslog-ng/reloadcache.log
*/5 * * * * php $WWW_DIRECTORY/admin/$MOD_NAME/scripts/SqueezeDB-v2.0.php >> /var/log/php-syslog-ng/squeezedb.log
" >> /etc/cron.d/syslog-ng
sudo chmod +x /etc/cron.d/syslog-ng

#Cacti 

cd $DL_DIR
mkdir $WWW_DIRECTORY/admin/$MOD_NAME
cp -Rf php-syslog-ng/* $WWW_DIRECTORY/admin/$MOD_NAME/.

cp $WWW_DIRECTORY/admin/$MOD_NAME/scripts/logrotate.d /etc/
mkdir -p /var/log/php-syslog-ng

echo "create database $MOD_NAME;
grant all on $MOD_NAME.* to $MOD_NAME@localhost identified by '$SYSLOGNG_MYSQL_PWD';
flush privileges;
" > /tmp/syslogng_db.sql
$BIN_MYSQL -u root < /tmp/syslogng_db.sql mysql


chmod -R 777 $WWW_DIRECTORY/admin/$MOD_NAME/
chown -R www-data $WWW_DIRECTORY/admin/$MOD_NAME/

cd $WWW_DIRECTORY/admin/$MOD_NAME/scripts/
perl -i -pe "s/\/www\/php-syslog-ng/$WWW_DIRECTORY/admin/$MOD_NAME/g" *

sed -i "14s/root/$MOD_NAME/" $WWW_DIRECTORY/admin/$MOD_NAME/html/install/install1.php
sed -i "15s/''/'$SYSLOGNG_MYSQL_PWD'/" $WWW_DIRECTORY/admin/$MOD_NAME/html/install/install1.php
sed -i "16s/''/'$SYSLOGNG_MYSQL_PWD'/" $WWW_DIRECTORY/admin/$MOD_NAME/html/install/install1.php
sed -i "17s/sysloguser/$MOD_NAME/" $WWW_DIRECTORY/admin/$MOD_NAME/html/install/install1.php
sed -i "18s/sysloguser/'$SYSLOGNG_MYSQL_PWD'/" $WWW_DIRECTORY/admin/$MOD_NAME/html/install/install1.php
sed -i "19s/sysloguser/'$SYSLOGNG_MYSQL_PWD'/" $WWW_DIRECTORY/admin/$MOD_NAME/html/install/install1.php
sed -i "20s/syslogadmin/$MOD_NAME/" $WWW_DIRECTORY/admin/$MOD_NAME/html/install/install1.php
sed -i "21s/syslogadmin/'$SYSLOGNG_MYSQL_PWD'/" $WWW_DIRECTORY/admin/$MOD_NAME/html/install/install1.php
sed -i "22s/syslogadmin/'$SYSLOGNG_MYSQL_PWD'/" $WWW_DIRECTORY/admin/$MOD_NAME/html/install/install1.php
sed -i "23s/syslog/$MOD_NAME/" $WWW_DIRECTORY/admin/$MOD_NAME/html/install/install1.php
sed -i "27s/\//\/admin\/$MOD_NAME\/html\//" $WWW_DIRECTORY/admin/$MOD_NAME/html/install/install3.php


cat << EOT >> /etc/syslog-ng/syslog-ng.conf
###########################################################################################
# Added by cdukes for php-syslog-ng // ref: http://gentoo-wiki.com/HOWTO_setup_PHP-Syslog-NG
###########################################################################################
options { 
long_hostnames(off);
# doesn't actually help on Solaris, log(3) truncates at 1024 chars
log_msg_size(8192);
# buffer just a little for performance
sync(1);
# memory is cheap, buffer messages unable to write (like to loghost)
log_fifo_size(16384);
# Hosts we don't want syslog from
#bad_hostname("^(ctld.|cmd|tmd|last)$");
# The time to wait before a dead connection is reestablished (seconds)
time_reopen(10);
#Use DNS so that our good names are used, not hostnames
use_dns(yes);
dns_cache(yes);
#Use the whole DNS name
use_fqdn(yes);
keep_hostname(yes);
chain_hostnames(no);
#Read permission for everyone
perm(0644);
# The default action of syslog-ng 1.6.0 is to log a STATS line
# to the file every 10 minutes.  That's pretty ugly after a while.
# Change it to every 12 hours so you get a nice daily update of
# how many messages syslog-ng missed (0).
stats(43200); 
};
source s_everything { internal(); pipe("/proc/kmsg"); unix-stream("/dev/log"); udp(); };
destination d_mysql {
program("/usr/bin/mysql -usyslogadmin -psyslogadmin $MOD_NAME"
template("INSERT INTO logs (host, facility, priority, level, tag, datetime, program, msg)
VALUES ( '\$HOST', '\$FACILITY', '\$PRIORITY', '\$LEVEL', '\$TAG', '\$YEAR-\$MONTH-\$DAY \$HOUR:\$MIN:\$SEC', '\$PROGRAM', '\$MSG' );\n")
template-escape(yes));
};
log {
source(s_everything);
destination(d_mysql);
};
# Added above by cdukes for php-syslog-ng enhancements
EOT

}


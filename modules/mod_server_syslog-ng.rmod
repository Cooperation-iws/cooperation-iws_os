function CHOOSE_PARAMETERS_GUI
{
if [ "$(echo "${INSTALL}" | awk  '{print $1}')" == "A" ]; then 
NOM_SYSLOGNG="Syslog-ng"
else 

NOM_SYSLOGNG=$(zenity --entry --text "$MESS_NAME SYSLOGNG")
test $? -ne 0 && break # Bouton Annuler
while (echo $NOM_SYSLOGNG | grep "[^a-zA-Z0-9]") 
do
NOM_SYSLOGNG=$(zenity --entry --text "$MESS_NAME SYSLOGNG")

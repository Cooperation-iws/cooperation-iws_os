#________________________________________INSTALL________________________________________________


function INSTALL
{
echo "I: Cacti download"
DOWNLOAD

apt-get install --assume-yes --force-yes syslog-ng
aptitude install -y msttcorefonts

#Cacti config

echo "
@daily php $WWW_DIRECTORY/admin/$NOM_SYSLOGNG/scripts/logrotate.php >> /var/log/php-syslog-ng/logrotate.log 
@daily find $WWW_DIRECTORY/admin/$NOM_SYSLOGNG/html/jpcache/ -atime 1 -exec rm -f '{}' ';' 
*/5 * * * * php $WWW_DIRECTORY/admin/$NOM_SYSLOGNG/scripts/reloadcache.php >> /var/log/php-syslog-ng/reloadcache.log
*/5 * * * * php $WWW_DIRECTORY/admin/$NOM_SYSLOGNG/scripts/SqueezeDB-v2.0.php >> /var/log/php-syslog-ng/squeezedb.log
" >> /etc/cron.d/syslog-ng
sudo chmod +x /etc/cron.d/syslog-ng

#Cacti 

cd $DL_DIR
mkdir $WWW_DIRECTORY/admin/$NOM_SYSLOGNG
cp -Rf php-syslog-ng/* $WWW_DIRECTORY/admin/$NOM_SYSLOGNG/.

cp $WWW_DIRECTORY/admin/$NOM_SYSLOGNG/scripts/logrotate.d /etc/
mkdir -p /var/log/php-syslog-ng

echo "create database $NOM_SYSLOGNG;
grant all on $NOM_SYSLOGNG.* to $NOM_SYSLOGNG@localhost identified by '$SYSLOGNG_MYSQL_PWD';
flush privileges;
" > syslogng_db.sql
$BIN_MYSQL -u root < syslogng_db.sql mysql
rm syslogng_db.sql
chmod -R 777 $WWW_DIRECTORY/admin/$NOM_SYSLOGNG/
chown -R www-data $WWW_DIRECTORY/admin/$NOM_SYSLOGNG/

cd $WWW_DIRECTORY/admin/$NOM_SYSLOGNG/scripts/
perl -i -pe 's/\/www\/php-syslog-ng/$WWW_DIRECTORY/admin/$NOM_SYSLOGNG/g' *

sed -i "14s/root/$NOM_SYSLOGNG/" $WWW_DIRECTORY/admin/$NOM_SYSLOGNG/html/install/install1.php
sed -i "15s/''/'$SYSLOGNG_MYSQL_PWD'/" $WWW_DIRECTORY/admin/$NOM_SYSLOGNG/html/install/install1.php
sed -i "16s/''/'$SYSLOGNG_MYSQL_PWD'/" $WWW_DIRECTORY/admin/$NOM_SYSLOGNG/html/install/install1.php
sed -i "23s/syslog/$NOM_SYSLOGNG/" $WWW_DIRECTORY/admin/$NOM_SYSLOGNG/html/install/install1.php

}


#________________________________________WGET_MIRROIR_WEB_______________________________________


function WGET_MIRROIR_WEB
{
cd $DL_DIR
if [ "$(echo "${LANG_UI}" | awk  '{print $1}')" == "FR" ]; then
wget http://fr.wordpress.org/wordpress-2.5.1-fr_FR.tar.gz
tar -xzf wordpress-2.5.1-fr_FR.tar.gz
mv wordpress-2.5.1-fr_FR.tar.gz wordpress-2.5.1.tar.gz
else
wget http://wordpress.org/wordpress-2.5.1.tar.gz
tar -xzf wordpress-2.5.1.tar.gz
fi

cd $DL_DIR
wget http://www.plaintxt.org/wp-content/uploads/Barthelme_v453.zip
unzip -q Barthelme_v453.zip


cd $DL_DIR
wget http://www.plaintxt.org/wp-content/uploads/plaintxtblog_v3-1.zip
unzip -q plaintxtblog_v3-1.zip

cd $DL_DIR
wget http://urbangiraffe.com/resources/download/plugin/search-regex.zip
unzip -q search-regex.zip

cd $DL_DIR
wget http://urbangiraffe.com/resources/download/plugin/search-unleashed.zip?version=0.2.15
mv search-unleashed.zip?version=0.2.15 search-unleashed.zip
unzip -q search-unleashed.zip

cd $DL_DIR
wget http://downloads.wordpress.org/plugin/wpmathpub.1.0.6.zip
unzip -q wpmathpub.1.0.6.zip

cd $DL_DIR
wget $URL_FREE/wp-print-custom.tar.gz
tar -xzf wp-print-custom.tar.gz


}


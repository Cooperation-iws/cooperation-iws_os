#________________________________________CREATE_INSTALL_SCRIPT__________________________________


function CREATE_INSTALL_SCRIPT
{

for (( count=1; count<=$NB_WORDPRESS; count++ ))
do
echo "
#Wordpress
sed -i \"8s/define('DB_COLLATE', '');/define('DB_COLLATE', ''); define('WP_SITEURL', 'http:\/\/'.\\\$HTTP_SERVER_VARS[\\\"""SERVER_NAME\\\"""].'\/${NOM_WORDPRESS[$count]}'); define('WP_HOME', 'http:\/\/'.\\\$HTTP_SERVER_VARS[\\\"""SERVER_NAME\\\"""].'\/${NOM_WORDPRESS[$count]}');/\" \$WWW_DIRECTORY/${NOM_WORDPRESS[$count]}/wp-config.php
" >> $LAMPP_DIRECTORY/share/lampp/config_post_install.sh
done
}


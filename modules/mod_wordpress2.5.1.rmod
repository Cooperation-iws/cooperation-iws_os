#_______________________________________________________________________________________________
#________________________________________CHOOSE_PARAMETERS_GUI______________________________________

function CHOOSE_PARAMETERS_GUI
{
if [ "$(echo "${INSTALL}" | awk  '{print $1}')" == "A" ]; then 
NB_WORDPRESS=1
NOM_WORDPRESS[1]="Wordpress25"

else 
NB_WORDPRESS=$(zenity --entry --text "$MESS_HOW_MANY Wordpress $MESS_DO_YOU_WANT")
test $? -ne 0 && break # Bouton Annuler
while (echo $NB_WORDPRESS | grep "[^0-9]") 
do
NB_WORDPRESS=$(zenity --entry --text "$MESS_HOW_MANY Wordpress $MESS_DO_YOU_WANT")
test $? -ne 0 && break # Bouton Annulerdone
done 


for (( count=1; count<=$NB_WORDPRESS; count++ ))
do
NOM_WORDPRESS[$count]=$(zenity --entry --text "$MESS_NAME $count WORDPRESS")
test $? -ne 0 && break # Bouton Annuler

while (echo ${NOM_WORDPRESS[$count]} | grep "[^a-zA-Z0-9]") 
do
NOM_WORDPRESS[$count]=$(zenity --entry --text "$MESS_NAME $count WORDPRESS")
test $? -ne 0 && break # Bouton Annulerdone
done 
done

fi
export NB_WORDPRESS=$NB_WORDPRESS
export NOM_WORDPRESS=$NOM_WORDPRESS

}
#_______________________________________________________________________________________________
#________________________________________FIN_CHOOSE_PARAMETERS_GUI______________________________


#_______________________________________________________________________________________________
#________________________________________INSTALL________________________________________________


function INSTALL
{

echo "I: Download Wordpress"
DOWNLOAD

for (( count=1; count<=$NB_WORDPRESS; count++ ))

do
mkdir $WWW_DIRECTORY/${NOM_WORDPRESS[$count]}
cd $DL_DIR
cp -Rf wordpress/* $WWW_DIRECTORY/${NOM_WORDPRESS[$count]}/.
echo "create database ${NOM_WORDPRESS[$count]};
grant all on ${NOM_WORDPRESS[$count]}.* to ${NOM_WORDPRESS[$count]}@localhost identified by '$WORDPRESS_MYSQL_PWD';
flush privileges;" > wordpress_db.sql

$BIN_MYSQL -u root < wordpress_db.sql mysql
rm wordpress_db.sql
cat $WWW_DIRECTORY/${NOM_WORDPRESS[$count]}/wp-admin/setup-config.php | sed -i -e  "s/value=\"wordpress\"/value=\"${NOM_WORDPRESS[$count]}\"/" $WWW_DIRECTORY/${NOM_WORDPRESS[$count]}/wp-admin/setup-config.php
cat $WWW_DIRECTORY/${NOM_WORDPRESS[$count]}/wp-admin/setup-config.php | sed -i -e  "s/value=\"username\"/value=\"${NOM_WORDPRESS[$count]}\"/" $WWW_DIRECTORY/${NOM_WORDPRESS[$count]}/wp-admin/setup-config.php
cat $WWW_DIRECTORY/${NOM_WORDPRESS[$count]}/wp-admin/setup-config.php | sed -i -e  "s/value=\"password\"/value=\"$WORDPRESS_MYSQL_PWD\"/" $WWW_DIRECTORY/${NOM_WORDPRESS[$count]}/wp-admin/setup-config.php

cd $DL_DIR

cp -Rf plaintxtblog $WWW_DIRECTORY/${NOM_WORDPRESS[$count]}/wp-content/themes/.

cd $DL_DIR

cp -Rf barthelme $WWW_DIRECTORY/${NOM_WORDPRESS[$count]}/wp-content/themes/.



cd $DL_DIR

cp -Rf search-regex $WWW_DIRECTORY/${NOM_WORDPRESS[$count]}/wp-content/plugins/.


cd $DL_DIR

cp -Rf search-unleashed $WWW_DIRECTORY/${NOM_WORDPRESS[$count]}/wp-content/plugins/.

cd $DL_DIR

cp -Rf wpmathpub $WWW_DIRECTORY/${NOM_WORDPRESS[$count]}/wp-content/plugins/.

sed -i "53s/true/false/" $WWW_DIRECTORY/${NOM_WORDPRESS[$count]}/wp-content/plugins/wpmathpub/wpmathpub.php

cp -Rf wp-print $WWW_DIRECTORY/${NOM_WORDPRESS[$count]}/wp-content/plugins/.

cat $WWW_DIRECTORY/${NOM_WORDPRESS[$count]}/wp-content/themes/plaintxtblog/single.php | sed -i -e "24s/<?php endif; ?>/<?php endif; ?><span class=\"entry-comments\"><?php if(function_exists('wp_print')) { print_link(); } ?><\/span>/" $WWW_DIRECTORY/${NOM_WORDPRESS[$count]}/wp-content/themes/plaintxtblog/single.php 
cat $WWW_DIRECTORY/${NOM_WORDPRESS[$count]}/wp-content/themes/plaintxtblog/page.php | sed -i -e "17s/<\/div>/<?php if(function_exists('wp_print')) { print_link(); } ?><\/div>/" $WWW_DIRECTORY/${NOM_WORDPRESS[$count]}/wp-content/themes/plaintxtblog/page.php 
#FR
cat $WWW_DIRECTORY/${NOM_WORDPRESS[$count]}/wp-content/themes/default/single.php | sed -i -e "s/Modifier cet article.','',''); ?>/Modifier cet article.','',''); ?><?php if(function_exists('wp_print')) { print_link(); } ?>/" $WWW_DIRECTORY/${NOM_WORDPRESS[$count]}/wp-content/themes/default/single.php 
cat $WWW_DIRECTORY/${NOM_WORDPRESS[$count]}/wp-content/themes/default/page.php | sed -i -e "s/<?php endwhile; endif; ?>/<?php endwhile; endif; ?><?php if(function_exists('wp_print')) { print_link(); } ?>/" $WWW_DIRECTORY/${NOM_WORDPRESS[$count]}/wp-content/themes/default/page.php 
#EN
cat $WWW_DIRECTORY/${NOM_WORDPRESS[$count]}/wp-content/themes/default/single.php | sed -i -e "s/Edit this entry.','',''); ?>/Edit this entry.','',''); ?><?php if(function_exists('wp_print')) { print_link(); } ?>/" $WWW_DIRECTORY/${NOM_WORDPRESS[$count]}/wp-content/themes/default/single.php 

cat $WWW_DIRECTORY/${NOM_WORDPRESS[$count]}/wp-content/themes/barthelme/single.php | sed -i -e "41s/<?php endif; ?>/<?php endif; ?><?php if(function_exists('wp_print')) { print_link(); } ?>/" $WWW_DIRECTORY/${NOM_WORDPRESS[$count]}/wp-content/themes/barthelme/single.php 
cat $WWW_DIRECTORY/${NOM_WORDPRESS[$count]}/wp-content/themes/barthelme/page.php | sed -i -e "18s/<\/div>/<?php if(function_exists('wp_print')) { print_link(); } ?><\/div>/" $WWW_DIRECTORY/${NOM_WORDPRESS[$count]}/wp-content/themes/barthelme/page.php 






chown -R www-data $WWW_DIRECTORY/${NOM_WORDPRESS[$count]}
  
done
}


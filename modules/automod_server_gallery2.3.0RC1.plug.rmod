#________________________________________DOWNLOAD_______________________________________________

function DOWNLOAD
{
if [ "$(echo "${MIRROIR}" | awk  '{print $1}')" == "A" ]; then 

WGET_MIRROIR_WEB
fi
if  [ "$(echo "${MIRROIR}" | awk  '{print $1}')" == "B" ]; then

WGET_MIRROIR_FREE
fi
if  [ "$(echo "${MIRROIR}" | awk  '{print $1}')" == "C" ]; then


WGET_MIRROIR_LOCAL
fi

}


#_______________________________________________________________________________________________
#________________________________________FIN_DOWNLOAD___________________________________________
#_______________________________________________________________________________________________
#________________________________________CHOOSE_PARAMETERS_GUI______________________________________

function CHOOSE_PARAMETERS_GUI
{
if [ "$(echo "${INSTALL}" | awk  '{print $1}')" == "A" ]; then 
NB_GALLERY2=1
MOD_NAME[1]="Gallery2"
else 
NB_GALLERY2=$(zenity --entry --text "$MESS_HOW_MANY Gallery2 $MESS_DO_YOU_WANT")
test $? -ne 0 && break # Bouton Annuler
while (echo $NB_GALLERY2 | grep "[^0-9]") 
do
NB_GALLERY2=$(zenity --entry --text "$MESS_HOW_MANY Gallery2 $MESS_DO_YOU_WANT")
test $? -ne 0 && break # Bouton Annulerdone
done 

for (( count=1; count<=$NB_GALLERY2; count++ ))
do
MOD_NAME[$count]=$(zenity --entry --text "$MESS_NAME $count GALLERY2")
test $? -ne 0 && break # Bouton Annuler

while (echo ${NOM_ZENPHOTO[$count]} | grep "[^a-zA-Z0-9]") 
do
MOD_NAME[$count]=$(zenity --entry --text "$MESS_NAME $count GALLERY2")
test $? -ne 0 && break # Bouton Annulerdone
done 
done 


fi
export NB_GALLERY2=$NB_GALLERY2
export MOD_NAME=$MOD_NAME

}
#_______________________________________________________________________________________________
#________________________________________FIN_CHOOSE_PARAMETERS_GUI______________________________



#_______________________________________________________________________________________________
#________________________________________INSTALL________________________________________________


function INSTALL
{
echo "I: Download Gallery"
DOWNLOAD

apt-get install --assume-yes --force-yes imagemagick 



#Gallery2

for (( count=1; count<=$NB_GALLERY2; count++ ))
do
cd $DL_DIR
mkdir $WWW_DIRECTORY/${MOD_NAME[$count]}
cp -Rf gallery2/* $WWW_DIRECTORY/${MOD_NAME[$count]}/.
echo "create database ${MOD_NAME[$count]};
grant all on ${MOD_NAME[$count]}.* to ${MOD_NAME[$count]}@localhost identified by '$GALLERY2_MYSQL_PWD';
flush privileges;" > gallery2_db.sql

$BIN_MYSQL -u root < gallery2_db.sql mysql
rm gallery2_db.sql
cat $WWW_DIRECTORY/${MOD_NAME[$count]}/install/steps/DatabaseSetupStep.class | sed -i -e "41s/root/${MOD_NAME[$count]}/" $WWW_DIRECTORY/${MOD_NAME[$count]}/install/steps/DatabaseSetupStep.class 
cat $WWW_DIRECTORY/${MOD_NAME[$count]}/install/steps/DatabaseSetupStep.class | sed -i -e "42s/''/'$GALLERY2_MYSQL_PWD'/" $WWW_DIRECTORY/${MOD_NAME[$count]}/install/steps/DatabaseSetupStep.class 
cat $WWW_DIRECTORY/${MOD_NAME[$count]}/install/steps/DatabaseSetupStep.class | sed -i -e "43s/gallery2/${MOD_NAME[$count]}/" $WWW_DIRECTORY/${MOD_NAME[$count]}/install/steps/DatabaseSetupStep.class 

mkdir $WWW_DIRECTORY/${MOD_NAME[$count]}/g2data

chown -R www-data $WWW_DIRECTORY/${MOD_NAME[$count]}

done

}

#_______________________________________________________________________________________________
#________________________________________FIN_INSTALL____________________________________________


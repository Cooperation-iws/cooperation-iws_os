#!/bin/bash


RMOD_ENGINE=1.0
RMOD_CATEGORY='Software'
RMOD_SUBCATEGORY='Servers'
RMOD_NAME='Mediawiki 1.12.0'
RMOD_AUTHOR='Oliv'
RMOD_VERSION=0.1
RMOD_DESCRIPTION='Wiki portal'
RMOD_DESCRIPTION_FR='Portail de wiki'
RMOD_VERBOSE="Mediawiki is a content management system software from the wiki type. This is the software used by Wikipedia.  "
RMOD_VERBOSE_FR="Mediawiki est un logiciel de gestion de contenu de type Wiki. C'est le logiciel qui est utilis√© par Wikipedia.  "


RMOD_RUN_IN_CHROOT=True
RMOD_UPDATE_URL='http://cooperation-iws.gensys-net.eu/update/modules/'
RMOD_REQ_APACHE=True

WWW_DIRECTORY=$(cat /tmp/web-path)
DL_DIR=$(cat /tmp/web_install-path)
BIN_MYSQL=$(cat /tmp/mysql-path)
SCRIPT_DIRECTORY=$(cat /tmp/script-path)
DISPLAY=127.0.0.1:5.0
LAMPP_DIRECTORY=$(cat /tmp/lampp-dir)
LANG_UI=$(cat /tmp/lang-wui)

#TEMP
MIRROIR=$(cat /tmp/mirroir)
URL_FREE=$(cat /tmp/url_mirroir)


INSTALL=$(cat /tmp/def_install)








#VARIABLES
#MYSQL PASSWORD
MEDIAWIKI_MYSQL_PWD="MEDIAWIKI_MYSQL_PWD"

#_______________________________________________________________________________________________
#__________________________________________LANGFR______________________________________________


function LANGFR

{
MESS_NAME="Entrez le nom de l'installation "
MESS_HOW_MANY="Combien de" 
MESS_DO_YOU_WANT="voulez vous installez ?"
}
#_______________________________________________________________________________________________
#__________________________________________FIN_LANGFR___________________________________________

#_______________________________________________________________________________________________
#__________________________________________LANGEN______________________________________________


function LANGEN

{
MESS_NAME="Enter the name of the install "
MESS_HOW_MANY="How many"
MESS_DO_YOU_WANT="do you want to install ?"
}
#_______________________________________________________________________________________________
#__________________________________________FIN_LANGEN___________________________________________


#_______________________________________________________________________________________________
#__________________________________________CHOICE_LANG___________________________________________

function CHOICE_LANG
{
if [ "$(echo "${LANG_UI}" | awk  '{print $1}')" == "FR" ]; then
LANGFR

else
LANGEN

fi
}
#_______________________________________________________________________________________________
#__________________________________________FIN_CHOICE_LANG______________________________________



#_______________________________________________________________________________________________
#________________________________________WGET_WEB_______________________________________


function WGET_WEB
{
cd $DL_DIR
wget http://download.wikimedia.org/mediawiki/1.12/mediawiki-1.12.0.tar.gz
tar xzf mediawiki-1.12.0.tar.gz
#rm mediawiki-1.12.0rc1.tar.gz
mv mediawiki-1.12.0 mediawiki

}

#_______________________________________________________________________________________________
#________________________________________FIN_WGET_WEB___________________________________

#_______________________________________________________________________________________________
#________________________________________WGET_MIRROIR______________________________________

function WGET_MIRROIR
{
cd $DL_DIR
wget $URL_FREE/mediawiki-1.12.0.tar.gz
tar xzf mediawiki-1.12.0.tar.gz
#rm mediawiki-1.12.0.tar.gz
mv mediawiki-1.12.0 mediawiki

}

#_______________________________________________________________________________________________
#________________________________________FIN_WGET_MIRROIR__________________________________

#_______________________________________________________________________________________________
#________________________________________DOWNLOAD_______________________________________________

function DOWNLOAD
{
if [ "$(echo "${MIRROIR}" | awk  '{print $1}')" == "A" ]; then 

WGET_WEB
fi
if  [ "$(echo "${MIRROIR}" | awk  '{print $1}')" == "B" ]; then

WGET_MIRROIR
fi


}


#_______________________________________________________________________________________________
#________________________________________FIN_DOWNLOAD___________________________________________

#_______________________________________________________________________________________________
#________________________________________CHOOSE_PARAMETERS_GUI______________________________________

function CHOOSE_PARAMETERS_GUI
{
if [ "$(echo "${INSTALL}" | awk  '{print $1}')" == "A" ]; then 
NB_MEDIAWIKI=1
MOD_NAME[1]="Mediawiki"

else 
INST_MEDIAWIKI="1"
NB_MEDIAWIKI=$(zenity --entry --text "$MESS_HOW_MANY Mediawiki $MESS_DO_YOU_WANT")
test $? -ne 0 && break # Bouton Annuler
while (echo $NB_MEDIAWIKI | grep "[^0-9]") 
do
NB_MEDIAWIKI=$(zenity --entry --text "$MESS_HOW_MANY Mediawiki $MESS_DO_YOU_WANT")
test $? -ne 0 && break # Bouton Annulerdone
done 

for (( count=1; count<=$NB_MEDIAWIKI; count++ ))
do

MOD_NAME[$count]=$(zenity --entry --text "$MESS_NAME $count MEDIAWIKI")
test $? -ne 0 && break # Bouton Annuler
while (echo ${MOD_NAME[$count]} | grep "[^a-zA-Z0-9]") 
do
MOD_NAME[$count]=$(zenity --entry --text "$MESS_NAME $count MEDIAWIKI")
test $? -ne 0 && break # Bouton Annulerdone
done 
done 

fi
export NB_MEDIAWIKI=$NB_MEDIAWIKI
export MOD_NAME=$MOD_NAME

}
#_______________________________________________________________________________________________
#________________________________________FIN_CHOOSE_PARAMETERS_GUI______________________________



#_______________________________________________________________________________________________
#________________________________________INSTALL________________________________________________


function INSTALL
{

echo "I: Download Mediawiki"
DOWNLOAD


apt-get install --yes --force-yes imagemagick tetex-bin gs-esp cjk-latex latex-cjk-all binutils tidy ocaml
#MEDIAWIKI

for (( count=1; count<=$NB_MEDIAWIKI; count++ ))

do
cd $DL_DIR
mkdir $WWW_DIRECTORY/${MOD_NAME[$count]}
cp -Rf mediawiki/* $WWW_DIRECTORY/${MOD_NAME[$count]}/.
echo "create database ${MOD_NAME[$count]};
grant all on ${MOD_NAME[$count]}.* to ${MOD_NAME[$count]}@localhost identified by '$MEDIAWIKI_MYSQL_PWD';
flush privileges;" > mediawiki_db.sql

$BIN_MYSQL -u root < mediawiki_db.sql mysql
rm mediawiki_db.sql

cat $WWW_DIRECTORY/${MOD_NAME[$count]}/config/index.php | sed -i -e "579s/wikiuser/${MOD_NAME[$count]}/" $WWW_DIRECTORY/${MOD_NAME[$count]}/config/index.php
cat $WWW_DIRECTORY/${MOD_NAME[$count]}/config/index.php | sed -i -e "578s/wikidb/${MOD_NAME[$count]}/" $WWW_DIRECTORY/${MOD_NAME[$count]}/config/index.php
cat $WWW_DIRECTORY/${MOD_NAME[$count]}/config/index.php | sed -i -e "580s/importPost( \"DBpassword\" )/importPost( \"DBpassword\", \"$MEDIAWIKI_MYSQL_PWD\" )/" $WWW_DIRECTORY/${MOD_NAME[$count]}/config/index.php
cat $WWW_DIRECTORY/${MOD_NAME[$count]}/config/index.php | sed -i -e "581s/importPost( \"DBpassword2\" )/importPost( \"DBpassword\", \"$MEDIAWIKI_MYSQL_PWD\" )/" $WWW_DIRECTORY/${MOD_NAME[$count]}/config/index.php
cat $WWW_DIRECTORY/${MOD_NAME[$count]}/config/index.php | sed -i -e '613s/if/#if/' $WWW_DIRECTORY/${MOD_NAME[$count]}/config/index.php
cat $WWW_DIRECTORY/${MOD_NAME[$count]}/config/index.php | sed -i -e '614s/\$errs/#\$errs/' $WWW_DIRECTORY/${MOD_NAME[$count]}/config/index.php
cat $WWW_DIRECTORY/${MOD_NAME[$count]}/config/index.php | sed -i -e '615s/}/#}/' $WWW_DIRECTORY/${MOD_NAME[$count]}/config/index.php


cd $WWW_DIRECTORY/${MOD_NAME[$count]}/math
make






chown -R www-data $WWW_DIRECTORY/${MOD_NAME[$count]}

done

}

#_______________________________________________________________________________________________
#________________________________________FIN_INSTALL____________________________________________

#_______________________________________________________________________________________________
#________________________________________CREATE_WUI_____________________________________________

function CREATE_WUI
{
for (( count=1; count<=$NB_MEDIAWIKI; count++ ))

do
echo "
<item>
	<item_category>$RMOD_DESCRIPTION</item_category>
	<item_url>/${MOD_NAME[$count]}</item_url>
	<item_name>$RMOD_NAME</item_name>
	<item_desc>$RMOD_VERBOSE</item_desc>
	<item_admin_url>/${MOD_NAME[$count]}</item_admin_url>
</item>
" >> $WWW_DIRECTORY/cooperation-wui.xml
echo "
<item>
	<item_category>$RMOD_DESCRIPTION_FR</item_category>
	<item_url>/${MOD_NAME[$count]}</item_url>
	<item_name>$RMOD_NAME</item_name>
	<item_desc>$RMOD_VERBOSE_FR</item_desc>
	<item_admin_url>/${MOD_NAME[$count]}</item_admin_url>
</item>
" >> $WWW_DIRECTORY/cooperation-wui-fr.xml

done
}
#_______________________________________________________________________________________________
#________________________________________FIN_CREATE_WUI_________________________________________

#_______________________________________________________________________________________________
#________________________________________CREATE_INSTALL_SCRIPT__________________________________


function CREATE_INSTALL_SCRIPT
{

for (( count=1; count<=$NB_MEDIAWIKI; count++ ))

do
echo "
#mediawiki
mv \$WWW_DIRECTORY/${MOD_NAME[$count]}/config/LocalSettings.php \$WWW_DIRECTORY/${MOD_NAME[$count]}
sed -i \"99s/false/true/\"  \$WWW_DIRECTORY/${MOD_NAME[$count]}/LocalSettings.php

echo \"
\\\$wgUploadPath = \\\"images\\\";
\\\$wgUploadDirectory = \\\"images\\\";
\\\$wgMathPath = \\\"\\\$wgScriptPath/\\\$wgUploadDirectory/math\\\";
\\\$wgMathDirectory = \\\"\\\$wgUploadDirectory/math\\\";
\\\$wgTmpDirectory = \\\"\\\$wgUploadDirectory/tmp\\\";

\" >> \$WWW_DIRECTORY/${MOD_NAME[$count]}/LocalSettings.php


" >> $LAMPP_DIRECTORY/share/lampp/config_post_install.sh
done
}

#_______________________________________________________________________________________________
#________________________________________FIN_CREATE_INSTALL_SCRIPT______________________________

echo "I: Install Mediawiki"
CHOICE_LANG
CHOOSE_PARAMETERS_GUI
INSTALL
CREATE_WUI
CREATE_INSTALL_SCRIPT

echo "I: End of install Mediawiki"
